@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Déconnexion";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .logout-container {
            min-height: 80vh;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .logout-card {
            max-width: 500px;
            width: 100%;
            border-radius: 15px;
            overflow: hidden;
            animation: slideIn 0.5s ease-out;
        }

        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 1.5rem;
        }

        .card-body {
            padding: 2rem;
        }

        .logout-icon {
            font-size: 4rem;
            color: #667eea;
            margin-bottom: 1rem;
        }

        .btn {
            border-radius: 25px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            }

        .btn-confirm {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
        }

            .btn-confirm:hover {
                background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
                color: white;
            }

        .btn-cancel {
            background: #f8f9fa;
            border: 2px solid #dee2e6;
            color: #6c757d;
        }

            .btn-cancel:hover {
                background: #e9ecef;
                border-color: #adb5bd;
                color: #495057;
            }

        keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .loading {
            display: none;
        }

            .loading.show {
                display: inline-block;
            }
    </style>
}

<div class="container-fluid logout-container d-flex align-items-center justify-content-center">
    <div class="card logout-card shadow-lg border-0">
        <div class="card-header text-center">
            <h4 class="mb-0">
                <i class="bi bi-box-arrow-right me-2"></i>
                Déconnexion
            </h4>
        </div>
        <div class="card-body text-center">
            <i class="bi bi-person-x logout-icon"></i>
            <h5 class="mb-3">Confirmation de déconnexion</h5>
            <p class="fs-6 text-muted mb-4">
                Êtes-vous sûr de vouloir vous déconnecter de votre session ?
                <br>
                <small>Cette action vous redirigera vers la page de connexion.</small>
            </p>

            @if (!string.IsNullOrEmpty(ViewBag.Message as string))
            {
                <div class="alert alert-info mb-3">
                    <i class="bi bi-info-circle me-2"></i>
                    @ViewBag.Message
                </div>
            }

            <form asp-action="Logout" asp-controller="Account" method="post" id="logoutForm">
                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <button type="submit" class="btn btn-confirm px-4" id="confirmBtn">
                        <i class="bi bi-check-circle me-2"></i>
                        <span class="btn-text">Confirmer</span>
                        <span class="loading spinner-border spinner-border-sm ms-2" role="status" aria-hidden="true"></span>
                    </button>
                    <a href="@ViewBag.ReturnUrl" class="btn btn-cancel px-4">
                        <i class="bi bi-x-circle me-2"></i>
                        Annuler
                    </a>
                </div>
            </form>
        </div>
        <div class="card-footer bg-transparent text-center">
            <small class="text-muted">
                <i class="bi bi-shield-check me-1"></i>
                Session sécurisée - Toutes vos données seront protégées
            </small>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('logoutForm');
            const confirmBtn = document.getElementById('confirmBtn');
            const loading = confirmBtn.querySelector('.loading');
            const btnText = confirmBtn.querySelector('.btn-text');

            form.addEventListener('submit', function(e) {
                loading.classList.add('show');
                btnText.textContent = 'Déconnexion...';
                confirmBtn.disabled = true;

                setTimeout(() => {
                    document.querySelector('.logout-card').style.animation = 'slideOut 0.5s ease-in';
                }, 100);
            });

            const style = document.createElement('style');
            style.textContent = `
                keyframes slideOut {
                    from {
                        opacity: 1;
                        transform: translateY(0);
                    }
                    to {
                        opacity: 0;
                        transform: translateY(-30px);
                    }
                }
            `;
            document.head.appendChild(style);

            document.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' && !e.shiftKey && !e.ctrlKey && !e.altKey) {
                    e.preventDefault();
                    form.submit();
                } else if (e.key === 'Escape') {
                    window.location.href = '@ViewBag.ReturnUrl';
                }
            });

            confirmBtn.focus();
        });
    </script>
}