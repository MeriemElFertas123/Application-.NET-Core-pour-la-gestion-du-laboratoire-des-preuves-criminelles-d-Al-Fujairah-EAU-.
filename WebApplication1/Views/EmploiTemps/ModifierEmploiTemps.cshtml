@model WebApplication1.Models.Emploi.EmploiTemps
@{
    ViewData["Title"] = "Modifier Emploi du Temps";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="container-fluid px-4 py-4">
    <!-- En-tête -->
    <div class="schedule-header mb-4">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <div class="schedule-badge">
                    <i class="fas fa-calendar-edit"></i>
                </div>
                <div class="ms-3">
                    <h1 class="schedule-title">Modifier Emploi du Temps</h1>
                    <p class="schedule-subtitle">Semaine @Model.NumeroSemaine/@Model.Annee - Statut: @Model.StatutLibelle</p>
                </div>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("VoirEmploiTempsSemaine", "EmploiTemps", new { week = Model.NumeroSemaine, year = Model.Annee })" class="btn btn-outline-secondary me-2">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
                <button type="submit" form="editScheduleForm" class="btn btn-success">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
            </div>
        </div>
    </div>

    <form asp-action="ModifierEmploiTemps" asp-controller="EmploiTemps" method="post" id="editScheduleForm" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="NumeroSemaine" />
        <input type="hidden" asp-for="Annee" />
        <input type="hidden" asp-for="DateCreation" />
        <input type="hidden" asp-for="CreePar" />

        <!-- Informations de base -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="info-card">
                    <h5><i class="fas fa-info-circle"></i> Informations de l'Emploi du Temps</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Semaine/Année</label>
                                <input type="text" class="form-control" value="Semaine @Model.NumeroSemaine - @Model.Annee" readonly>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Période</label>
                                <input type="text" class="form-control" value="@Model.PeriodeAffichage" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Statut Actuel</label>
                                <div class="current-status">
                                    @if (Model.Statut == "Approved")
                                    {
                                        <span class="status-badge approved">
                                            <i class="fas fa-check-circle"></i> @Model.StatutLibelle
                                        </span>
                                    }
                                    else if (Model.Statut == "Pending")
                                    {
                                        <span class="status-badge pending">
                                            <i class="fas fa-clock"></i> @Model.StatutLibelle
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-badge draft">
                                            <i class="fas fa-edit"></i> @Model.StatutLibelle
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Commentaires" class="form-label">Commentaires</label>
                                <textarea asp-for="Commentaires" class="form-control" rows="2" placeholder="Commentaires sur les modifications..."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card">
                    <h5><i class="fas fa-chart-bar"></i> Statistiques Actuelles</h5>
                    <div class="stats-list">
                        <div class="stat-item">
                            <span class="stat-label">Personnel assigné:</span>
                            <span class="stat-value">@Model.NombrePersonnelAssigne personnes</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Heures totales:</span>
                            <span class="stat-value">@Model.HeuresTotal h</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Taux de couverture:</span>
                            <span class="stat-value coverage-@(Model.TauxCouverture >= 90 ? "good" : Model.TauxCouverture >= 70 ? "warning" : "danger")">@Model.TauxCouverture%</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Services couverts:</span>
                            <span class="stat-value">@Model.Affectations.Select(a => a.ServiceId).Distinct().Count()/4</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grille de planification -->
        <div class="schedule-grid-card">
            <div class="schedule-grid-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5><i class="fas fa-table"></i> Grille de Planification</h5>
                    <div class="grid-controls">
                        <button type="button" class="btn btn-sm btn-outline-primary me-2" onclick="autoFillSchedule()">
                            <i class="fas fa-magic"></i> Auto-remplir
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-secondary me-2" onclick="clearSchedule()">
                            <i class="fas fa-eraser"></i> Effacer tout
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-info" onclick="resetToOriginal()">
                            <i class="fas fa-undo"></i> Restaurer original
                        </button>
                    </div>
                </div>
            </div>

            <div class="schedule-grid-body">
                <div class="table-responsive">
                    <table class="schedule-table">
                        <thead>
                            <tr>
                                <th class="service-column">Service</th>
                                <th class="day-column">Lundi<br><small>@Model.DateDebut.ToString("dd MMM")</small></th>
                                <th class="day-column">Mardi<br><small>@Model.DateDebut.AddDays(1).ToString("dd MMM")</small></th>
                                <th class="day-column">Mercredi<br><small>@Model.DateDebut.AddDays(2).ToString("dd MMM")</small></th>
                                <th class="day-column">Jeudi<br><small>@Model.DateDebut.AddDays(3).ToString("dd MMM")</small></th>
                                <th class="day-column">Vendredi<br><small>@Model.DateDebut.AddDays(4).ToString("dd MMM")</small></th>
                                <th class="total-column">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var service in ViewBag.Services as List<WebApplication1.Models.Emploi.Service>)
                            {
                                <tr class="service-row" data-service="@service.Id">
                                    <td class="service-name">
                                        <div class="service-info">
                                            <span class="service-title">@service.Nom</span>
                                            <small class="service-capacity">Capacité: @service.CapaciteMaximum personnes</small>
                                        </div>
                                    </td>
                                    @foreach (var day in new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday" })
                                    {
                                        <td class="schedule-cell" data-day="@day.ToLower()" data-service="@service.Id">
                                            <div class="personnel-assignment">
                                                <!-- Équipe du matin -->
                                                <div class="shift-container">
                                                    <select class="personnel-select" multiple
                                                            name="Affectations[@service.Id][@day][Morning]"
                                                            data-shift="morning"
                                                            data-service="@service.Id"
                                                            data-day="@day">
                                                        @foreach (var personnel in (ViewBag.Personnels as List<WebApplication1.Models.Emploi.Personnel>)
                                                                                                        .Where(p => p.ServiceId == service.Id && p.Actif))
                                                        {
                                                            var isSelected = Model.Affectations.Any(a =>
                                                            a.ServiceId == service.Id &&
                                                            a.Jour == day &&
                                                            a.Equipe == "Morning" &&
                                                            a.PersonnelId == personnel.Id);
                                                            <option value="@personnel.Id" selected="@isSelected">
                                                                @personnel.NomComplet (@personnel.TypePersonnelLibelle)
                                                            </option>
                                                        }
                                                    </select>
                                                    <div class="shift-label">Matin (8h-16h)</div>
                                                </div>
                                                <!-- Équipe du soir -->
                                                <div class="shift-container">
                                                    <select class="personnel-select" multiple
                                                            name="Affectations[@service.Id][@day][Evening]"
                                                            data-shift="evening"
                                                            data-service="@service.Id"
                                                            data-day="@day">
                                                        @foreach (var personnel in (ViewBag.Personnels as List<WebApplication1.Models.Emploi.Personnel>)
                                                                                                        .Where(p => p.ServiceId == service.Id && p.Actif))
                                                        {
                                                            var isSelected = Model.Affectations.Any(a =>
                                                            a.ServiceId == service.Id &&
                                                            a.Jour == day &&
                                                            a.Equipe == "Evening" &&
                                                            a.PersonnelId == personnel.Id);
                                                            <option value="@personnel.Id" selected="@isSelected">
                                                                @personnel.NomComplet (@personnel.TypePersonnelLibelle)
                                                            </option>
                                                        }
                                                    </select>
                                                    <div class="shift-label">Soir (16h-24h)</div>
                                                </div>
                                            </div>
                                        </td>
                                    }
                                    <td class="total-cell">
                                        <div class="total-hours">0h</div>
                                        <div class="total-staff">0 pers.</div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Actions de sauvegarde -->
        <div class="row mt-4">
            <div class="col-md-8">
                <div class="validation-card">
                    <h5><i class="fas fa-save"></i> Actions de Sauvegarde</h5>
                    <p class="text-muted">Choisissez l'action à effectuer après la modification :</p>
                    <div class="validation-buttons">
                        <button type="submit" class="btn btn-outline-secondary me-2" name="action" value="draft">
                            <i class="fas fa-save"></i> Enregistrer comme brouillon
                        </button>
                        @if (Model.Statut == "Draft")
                        {
                            <button type="submit" class="btn btn-warning me-2" name="action" value="pending">
                                <i class="fas fa-paper-plane"></i> Soumettre pour approbation
                            </button>
                        }
                        @if (Model.Statut == "Pending" && User.IsInRole("Directeur"))
                        {
                            <button type="submit" class="btn btn-success me-2" name="action" value="approved">
                                <i class="fas fa-check"></i> Approuver
                            </button>
                        }
                        <button type="submit" class="btn btn-primary" name="action" value="">
                            <i class="fas fa-save"></i> Enregistrer sans changer le statut
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="summary-card">
                    <h5><i class="fas fa-chart-bar"></i> Résumé des Modifications</h5>
                    <div class="summary-stats">
                        <div class="summary-item">
                            <span class="summary-label">Total Heures:</span>
                            <span class="summary-value" id="totalHours">@Model.HeuresTotal h</span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">Personnel Assigné:</span>
                            <span class="summary-value" id="totalStaff">@Model.NombrePersonnelAssigne personnes</span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">Services Couverts:</span>
                            <span class="summary-value" id="servicesCovered">@Model.Affectations.Select(a => a.ServiceId).Distinct().Count()/@((ViewBag.Services as List<WebApplication1.Models.Emploi.Service>).Count)</span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">Taux de Couverture:</span>
                            <span class="summary-value" id="coverageRate">@Model.TauxCouverture%</span>
                        </div>
                    </div>
                    <div class="changes-indicator mt-3">
                        <div class="alert alert-info" id="changesAlert" style="display: none;">
                            <i class="fas fa-exclamation-circle"></i>
                            <span id="changesMessage">Des modifications ont été détectées</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 1050;">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 1050;">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 1050;">
        <i class="fas fa-exclamation-circle me-2"></i>
        Des erreurs ont été détectées. Veuillez corriger les champs en rouge.
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

