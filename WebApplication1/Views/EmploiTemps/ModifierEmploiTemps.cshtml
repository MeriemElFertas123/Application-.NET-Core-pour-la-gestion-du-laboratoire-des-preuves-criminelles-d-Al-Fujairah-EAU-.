<script>
    let personnelAssignments = {};
    let originalAssignments = {};
    let hasChanges = false;

    document.addEventListener('DOMContentLoaded', function () {
        initializePersonnelSelects();
        loadOriginalAssignments();
        updateSummary();

        // Auto-hide alerts après 5 secondes
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(alert => {
                if (alert.parentNode) {
                    alert.remove();
                }
            });
        }, 5000);
    });

    function initializePersonnelSelects() {
        const selects = document.querySelectorAll('.personnel-select');
        selects.forEach(select => {
            select.addEventListener('change', function () {
                updateAssignments();
                updateSummary();
                detectChanges();
                this.classList.add('highlight-change');
                setTimeout(() => this.classList.remove('highlight-change'), 2000);
            });
        });
    }

    function loadOriginalAssignments() {
        // Charger les affectations originales
        const selects = document.querySelectorAll('.personnel-select');
        selects.forEach(select => {
            const service = select.dataset.service;
            const day = select.dataset.day;
            const shift = select.dataset.shift;
            const selectedOptions = Array.from(select.selectedOptions).map(option => option.value);

            if (!originalAssignments[service]) {
                originalAssignments[service] = {};
            }
            if (!originalAssignments[service][day]) {
                originalAssignments[service][day] = {};
            }

            originalAssignments[service][day][shift] = [...selectedOptions];
        });

        personnelAssignments = JSON.parse(JSON.stringify(originalAssignments));
    }

    function updateAssignments() {
        const selects = document.querySelectorAll('.personnel-select');
        personnelAssignments = {};

        selects.forEach(select => {
            const service = select.dataset.service;
            const day = select.dataset.day;
            const shift = select.dataset.shift;
            const selectedOptions = Array.from(select.selectedOptions).map(option => option.value);

            if (!personnelAssignments[service]) {
                personnelAssignments[service] = {};
            }
            if (!personnelAssignments[service][day]) {
                personnelAssignments[service][day] = {};
            }

            personnelAssignments[service][day][shift] = selectedOptions;
        });

        updateTotalColumns();
    }

    function updateTotalColumns() {
        const services = document.querySelectorAll('.service-row');

        services.forEach(serviceRow => {
            const serviceId = serviceRow.dataset.service;
            const totalCell = serviceRow.querySelector('.total-cell');

            let totalHours = 0;
            let totalStaff = new Set();

            ['monday', 'tuesday', 'wednesday', 'thursday', 'friday'].forEach(day => {
                if (personnelAssignments[serviceId] && personnelAssignments[serviceId][day]) {
                    Object.values(personnelAssignments[serviceId][day]).forEach(assignments => {
                        totalHours += assignments.length * 8;
                        assignments.forEach(person => totalStaff.add(person));
                    });
                }
            });

            totalCell.querySelector('.total-hours').textContent = `${totalHours}h`;
            totalCell.querySelector('.total-staff').textContent = `${totalStaff.size} pers.`;
        });
    }

    function updateSummary() {
        let totalHours = 0;
        let totalStaff = new Set();
        let servicesCovered = 0;

        const services = document.querySelectorAll('.service-row');
        const totalServices = services.length;

        services.forEach(serviceRow => {
            const serviceId = serviceRow.dataset.service;
            let serviceHasAssignments = false;

            if (personnelAssignments[serviceId]) {
                Object.values(personnelAssignments[serviceId]).forEach(dayAssignments => {
                    Object.values(dayAssignments).forEach(shiftAssignments => {
                        if (shiftAssignments.length > 0) {
                            serviceHasAssignments = true;
                            totalHours += shiftAssignments.length * 8;
                            shiftAssignments.forEach(person => totalStaff.add(person));
                        }
                    });
                });
            }

            if (serviceHasAssignments) {
                servicesCovered++;
            }
        });

        const coverageRate = totalServices > 0 ? Math.round((servicesCovered / totalServices) * 100) : 0;

        document.getElementById('totalHours').textContent = `${totalHours}h`;
        document.getElementById('totalStaff').textContent = `${totalStaff.size} personnes`;
        document.getElementById('servicesCovered').textContent = `${servicesCovered}/${totalServices}`;

        const coverageElement = document.getElementById('coverageRate');
        coverageElement.textContent = `${coverageRate}%`;

        coverageElement.className = 'summary-value';
        if (coverageRate >= 75) {
            coverageElement.classList.add('coverage-good');
        } else if (coverageRate >= 50) {
            coverageElement.classList.add('coverage-warning');
        } else {
            coverageElement.classList.add('coverage-danger');
        }
    }

    function detectChanges() {
        hasChanges = false;
        const selects = document.querySelectorAll('.personnel-select');

        selects.forEach(select => {
            const service = select.dataset.service;
            const day = select.dataset.day;
            const shift = select.dataset.shift;
            const currentSelection = Array.from(select.selectedOptions).map(option => option.value).sort();

            const originalSelection = (originalAssignments[service] &&
                                    originalAssignments[service][day] &&
                                    originalAssignments[service][day][shift]) || [];

            const originalSorted = [...originalSelection].sort();

            if (JSON.stringify(currentSelection) !== JSON.stringify(originalSorted)) {
                hasChanges = true;
                select.classList.add('changed');
                select.closest('.shift-container').classList.add('modified');
            } else {
                select.classList.remove('changed');
                select.closest('.shift-container').classList.remove('modified');
            }
        });

        // Afficher/masquer l'indicateur de changements
        const changesAlert = document.getElementById('changesAlert');
        const changesMessage = document.getElementById('changesMessage');

        if (hasChanges) {
            changesMessage.textContent = 'Des modifications ont été détectées';
            changesAlert.style.display = 'block';
            changesAlert.className = 'alert alert-warning fade-in';
        } else {
            changesAlert.style.display = 'none';
        }
    }

    function autoFillSchedule() {
        if (confirm('Ceci va remplir automatiquement les créneaux vides selon les règles par défaut. Continuer ?')) {
            // Logique d'auto-remplissage similaire à la création
            const services = document.querySelectorAll('.service-row');

            services.forEach(serviceRow => {
                const morningSelects = serviceRow.querySelectorAll('[data-shift="morning"]');
                const eveningSelects = serviceRow.querySelectorAll('[data-shift="evening"]');

                morningSelects.forEach((select, index) => {
                    if (select.selectedOptions.length === 0 && select.options.length > 1) {
                        // Sélectionner les 2 premières options disponibles
                        for (let i = 1; i <= Math.min(2, select.options.length - 1); i++) {
                            select.options[i].selected = true;
                        }
                    }
                });

                eveningSelects.forEach((select, index) => {
                    if (select.selectedOptions.length === 0 && select.options.length > 1 && index < 3) {
                        // Sélectionner 1 option pour le soir (3 premiers jours)
                        select.options[1].selected = true;
                    }
                });
            });

            updateAssignments();
            updateSummary();
            detectChanges();
            showNotification('Auto-remplissage appliqué aux créneaux vides', 'success');
        }
    }

    function clearSchedule() {
        if (confirm('Êtes-vous sûr de vouloir effacer toute la planification ?')) {
            document.querySelectorAll('.personnel-select option').forEach(option => {
                option.selected = false;
            });

            updateAssignments();
            updateSummary();
            detectChanges();
            showNotification('Planification effacée', 'info');
        }
    }

    function resetToOriginal() {
        if (confirm('Voulez-vous restaurer la planification originale ? Toutes les modifications seront perdues.')) {
            // Restaurer les sélections originales
            const selects = document.querySelectorAll('.personnel-select');
            selects.forEach(select => {
                const service = select.dataset.service;
                const day = select.dataset.day;
                const shift = select.dataset.shift;

                // Désélectionner tout
                Array.from(select.options).forEach(option => option.selected = false);

                // Restaurer la sélection originale
                const originalSelection = (originalAssignments[service] &&
                                        originalAssignments[service][day] &&
                                        originalAssignments[service][day][shift]) || [];

                originalSelection.forEach(personnelId => {
                    const option = select.querySelector(`option[value="${personnelId}"]`);
                    if (option) {
                        option.selected = true;
                    }
                });
            });

            updateAssignments();
            updateSummary();
            detectChanges();
            showNotification('Planification originale restaurée', 'info');
        }
    }

    function showNotification(message, type = 'info') {
        const notification = document.createElement('div');
        notification.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
        notification.style.top = '20px';
        notification.style.right = '20px';
        notification.style.zIndex = '1050';
        notification.style.minWidth = '300px';

        const icons = {
            'success': 'fas fa-check-circle',
            'warning': 'fas fa-exclamation-triangle',
            'danger': 'fas fa-exclamation-circle',
            'info': 'fas fa-info-circle'
        };

        notification.innerHTML = `
            <i class="${icons[type]} me-2"></i>
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;

        document.body.appendChild(notification);

        setTimeout(() => {
            if (notification.parentNode) {
                notification.remove();
            }
        }, 5000);
    }

    // Avertir avant de quitter si des changements non sauvegardés
    window.addEventListener('beforeunload', function (e) {
        if (hasChanges) {
            e.preventDefault();
            e.returnValue = 'Vous avez des modifications non sauvegardées. Êtes-vous sûr de vouloir quitter ?';
        }
    });

    // Désactiver l'avertissement lors de la soumission du formulaire
    document.getElementById('editScheduleForm').addEventListener('submit', function() {
        hasChanges = false;
    });
</script>