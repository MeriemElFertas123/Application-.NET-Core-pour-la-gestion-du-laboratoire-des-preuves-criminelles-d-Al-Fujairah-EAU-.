<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laboratoire Judiciaire - Tableau de bord</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <style>
        :root {
            --judicial-primary: #1e3a8a;
            --judicial-secondary: #64748b;
            --judicial-accent: #dc2626;
            --judicial-success: #16a34a;
            --judicial-warning: #d97706;
            --judicial-light: #f8fafc;
            --judicial-border: #e2e8f0;
            --schedule-primary: #8b5cf6;
        }

        body {
            background-color: var(--judicial-light);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .judicial-header {
            background: linear-gradient(135deg, var(--judicial-primary), #3b82f6);
            color: white;
            padding: 2rem;
            border-radius: 12px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 8px 32px rgba(30, 58, 138, 0.2);
        }

        .judicial-badge {
            width: 60px;
            height: 60px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }

        .judicial-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin: 0;
        }

        .judicial-subtitle {
            font-size: 1rem;
            opacity: 0.9;
            margin: 0;
        }

        .judicial-date {
            font-size: 0.9rem;
            opacity: 0.8;
        }

        /* Section Emplois du Temps */
        .schedule-management-card {
            background: linear-gradient(135deg, var(--schedule-primary), #a855f7);
            color: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 8px 32px rgba(139, 92, 246, 0.2);
        }

        .schedule-header h5 {
            margin: 0;
            font-weight: 600;
        }

        /* Personnel Cards */
        .personnel-card, .weekly-schedule-card {
            background: white;
            border-radius: 12px;
            padding: 1rem;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            height: 100%;
        }

        .personnel-header, .weekly-header {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--judicial-primary);
            font-weight: 600;
            margin-bottom: 0.75rem;
            font-size: 0.95rem;
        }

        .personnel-stats {
            display: flex;
            justify-content: space-around;
            gap: 1rem;
        }

        .stat-item {
            text-align: center;
            flex: 1;
        }

        .stat-number {
            display: block;
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--judicial-primary);
            line-height: 1;
        }

        .stat-label {
            font-size: 0.85rem;
            color: var(--judicial-secondary);
            margin-top: 0.25rem;
        }

        /* Weekly Schedule Card */
        .weekly-status {
            text-align: center;
            padding: 1rem 0;
        }

        .status-indicator {
            margin-bottom: 1rem;
        }

        /* Chart Cards */
        .chart-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            height: 100%;
        }

        .chart-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--judicial-border);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .chart-header h5 {
                margin: 0;
                color: var(--judicial-primary);
                font-weight: 600;
            }

        .chart-body {
            padding: 1.5rem;
        }

        /* Responsive Design */
        media (max-width: 768px) {
            .personnel-stats

        {
            flex-direction: column;
            gap: 1.5rem;
        }

        .judicial-header {
            flex-direction: column;
            text-align: center;
            gap: 1rem;
        }

            .judicial-header .text-end {
                text-align: center !important;
            }

        }

        /* Animation Effects */
        keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .chart-card, .schedule-management-card {
            animation: fadeInUp 0.6s ease-out;
        }

        /* Custom Buttons */
        .btn-sm {
            font-size: 0.8rem;
            padding: 0.375rem 0.75rem;
        }

        .schedule-actions .btn {
            border-radius: 6px;
            font-weight: 500;
        }

        /* Status Badges */
        .badge {
            font-size: 0.75rem;
            padding: 0.35em 0.65em;
        }
    </style>
</head>
<body>
    <div class="container-fluid px-4 py-4">

        <!-- En-tête du tableau de bord -->
        <div class="judicial-header mb-4">
            <div class="d-flex align-items-center">
                <div class="judicial-badge">
                    <i class="fas fa-microscope"></i>
                </div>
                <div class="ms-3">
                    <h1 class="judicial-title">Laboratoire Judiciaire</h1>
                    <p class="judicial-subtitle">Gestion des Preuves & Planification du Personnel</p>
                </div>
            </div>
            <div class="text-end">
                <div class="judicial-date">
                    <i class="fas fa-calendar"></i>
                    @DateTime.Now.ToString("dddd dd MMMM yyyy", new System.Globalization.CultureInfo("fr-FR"))
                </div>
                <div class="mt-2">
                    <span class="badge bg-info">Semaine @System.Globalization.CultureInfo.CurrentCulture.Calendar.GetWeekOfYear(DateTime.Now, System.Globalization.CalendarWeekRule.FirstFourDayWeek, DayOfWeek.Monday)</span>
                </div>
            </div>
        </div>

        <!-- Section Emplois du Temps Hebdomadaires -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="schedule-management-card">
                    <div class="schedule-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5><i class="fas fa-calendar-week"></i> Gestion des Emplois du Temps Hebdomadaires</h5>
                            <div class="schedule-actions">
                                <button class="btn btn-light btn-sm me-2" onclick="window.location.href='@Url.Action("CreerEmploiTemps", "EmploiTemps")'">
                                    <i class="fas fa-plus"></i> Créer Emploi du Temps
                                </button>
                                <button class="btn btn-outline-light btn-sm" onclick="window.location.href='@Url.Action("HistoriqueEmploisTemps", "EmploiTemps")'">
                                    <i class="fas fa-history"></i> Historique
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistiques du personnel laboratoire -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="personnel-card">
                    <div class="personnel-header">
                        <i class="fas fa-user-cog"></i>
                        <span>Personnel Laboratoire</span>
                    </div>
                    <div class="personnel-stats">
                        <div class="stat-item">
                            <span class="stat-number">15</span>
                            <span class="stat-label">Techniciens</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">8</span>
                            <span class="stat-label">Analystes</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="weekly-schedule-card">
                    <div class="weekly-header">
                        <i class="fas fa-calendar-check"></i>
                        <span>Planification Semaine Courante</span>
                    </div>
                    <div class="weekly-status">
                        <div class="status-indicator">
                            <span class="badge bg-warning"><i class="fas fa-clock"></i> En attente</span>
                        </div>
                        <div class="quick-actions mt-2">
                            <button class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i> Voir Planning
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Graphique analytique principal -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="chart-card">
                    <div class="chart-header">
                        <h5><i class="fas fa-chart-area"></i> Évolution des Analyses - 6 Derniers Mois</h5>
                        <div class="chart-controls">
                            <select class="form-select form-select-sm">
                                <option>Tous les types</option>
                                <option>Analyses ADN</option>
                                <option>Toxicologie</option>
                                <option>Balistique</option>
                                <option>Empreintes</option>
                            </select>
                        </div>
                    </div>
                    <div class="chart-body">
                        <canvas id="analysisChart" height="100"></canvas>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const colors = {
                primary: '#1e3a8a',
                secondary: '#64748b',
                accent: '#dc2626',
                success: '#16a34a',
                warning: '#d97706',
                danger: '#dc2626',
                schedule: '#8b5cf6'
            };

            // Graphique d'évolution des analyses
            const analysisCtx = document.getElementById('analysisChart').getContext('2d');
            new Chart(analysisCtx, {
                type: 'line',
                data: {
                    labels: ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin'],
                    datasets: [{
                        label: 'Analyses Réalisées',
                        data: [45, 52, 48, 61, 55, 67],
                        borderColor: colors.primary,
                        backgroundColor: colors.primary + '20',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4
                    }, {
                        label: 'Objectif Mensuel',
                        data: [50, 50, 50, 60, 60, 60],
                        borderColor: colors.warning,
                        backgroundColor: colors.warning + '20',
                        borderWidth: 2,
                        fill: false,
                        borderDash: [5, 5]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                usePointStyle: true,
                                padding: 20
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: '#f1f5f9' },
                            ticks: { color: colors.secondary }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { color: colors.secondary }
                        }
                    }
                }
            });

            // Fonction pour mettre à jour le statut des emplois du temps
            function updateScheduleStatus() {
                // Simulation d'appel AJAX pour vérifier le statut
                console.log("Mise à jour du statut des emplois du temps...");
            }

            // Fonction pour afficher les notifications emplois du temps
            function showScheduleNotification(message, type = 'info') {
                // Fonctionnalité de notification
                console.log("Notification:", message, "Type:", type);
            }

            // Fonction pour vérifier les échéances des emplois du temps
            function checkScheduleDeadlines() {
                // Vérification des échéances
                console.log("Vérification des échéances...");
            }

            // Fonction pour gérer les actions rapides du dashboard
            function initializeQuickActions() {
                // Initialisation des actions rapides
                console.log("Initialisation des actions rapides...");
            }

            // Initialisation au chargement de la page
            // Vérifier le statut des emplois du temps toutes les 5 minutes
            setInterval(updateScheduleStatus, 300000);

            // Vérifier les échéances au chargement puis toutes les heures
            checkScheduleDeadlines();
            setInterval(checkScheduleDeadlines, 3600000);

            // Initialiser les actions rapides
            initializeQuickActions();

            // Animation des compteurs
            animateCounters();
        });

        // Fonction d'animation des compteurs
        function animateCounters() {
            const counters = document.querySelectorAll('.stat-number');

            counters.forEach(counter => {
                const target = parseInt(counter.innerText);
                const increment = target / 50;
                let current = 0;

                const timer = setInterval(() => {
                    current += increment;
                    counter.innerText = Math.floor(current);

                    if (current >= target) {
                        counter.innerText = target;
                        clearInterval(timer);
                    }
                }, 30);
            });
        }

        // Fonction pour rafraîchir les données du dashboard
        function refreshDashboard() {
            location.reload();
        }

        // Auto-refresh toutes les 10 minutes
        setInterval(refreshDashboard, 600000);
    </script>
</body>
