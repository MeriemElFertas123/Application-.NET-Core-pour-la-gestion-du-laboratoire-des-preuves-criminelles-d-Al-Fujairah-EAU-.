@model WebApplication1.Models.Stockage.Echantillon
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using WebApplication1.Models.Stockage

@{
    ViewBag.Title = "Créer un Échantillon";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4><i class="fas fa-vial"></i> Créer un Nouvel Échantillon</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NumeroEchantillon" class="form-label"></label>
                                <input asp-for="NumeroEchantillon" class="form-control" placeholder="Numéro unique de l'échantillon..." />
                                <span asp-validation-for="NumeroEchantillon" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Type" class="form-label"></label>
                                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<TypeEchantillon>()">
                                    <option value="">-- Sélectionner un type --</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Statut" class="form-label"></label>
                                <select asp-for="Statut" class="form-control" asp-items="Html.GetEnumSelectList<StatutEchantillon>()"></select>
                                <span asp-validation-for="Statut" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Priorite" class="form-label"></label>
                                <select asp-for="Priorite" class="form-control" asp-items="Html.GetEnumSelectList<PrioriteEchantillon>()"></select>
                                <span asp-validation-for="Priorite" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="DateReception" class="form-label"></label>
                                <input asp-for="DateReception" class="form-control" type="datetime-local" />
                                <span asp-validation-for="DateReception" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="AffaireId" class="form-label">Affaire</label>
                                <select asp-for="AffaireId" class="form-control" asp-items="ViewBag.AffaireId">
                                    <option value="">-- Sélectionner une affaire --</option>
                                </select>
                                <span asp-validation-for="AffaireId" class="text-danger"></span>
                            </div>

                            
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Description détaillée de l'échantillon..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="LieuCollecte" class="form-label"></label>
                                <input asp-for="LieuCollecte" class="form-control" placeholder="Lieu de collecte..." />
                                <span asp-validation-for="LieuCollecte" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ResponsableCollecte" class="form-label"></label>
                                <input asp-for="ResponsableCollecte" class="form-control" placeholder="Responsable de la collecte..." />
                                <span asp-validation-for="ResponsableCollecte" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                 

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label class="form-label">Fichier de l'échantillon (optionnel)</label>
                                <div class="input-group">
                                    <input type="file" name="fichier" id="Fichier" class="form-control"
                                           accept=".jpg,.jpeg,.png,.gif,.bmp,.pdf,.doc,.docx,.xls,.xlsx,.txt,.csv,.mp3,.wav,.ogg,.mp4,.avi,.mov,.wmv,.zip,.rar" />
                                    <label class="input-group-text" for="Fichier">
                                        <i class="fas fa-upload"></i>
                                    </label>
                                </div>
                                <div class="form-text">
                                    <i class="fas fa-info-circle"></i>
                                    Formats supportés : Images (JPG, PNG, GIF, BMP), Documents (PDF, DOC, DOCX, XLS, XLSX, TXT, CSV),
                                    Audio (MP3, WAV, OGG), Vidéo (MP4, AVI, MOV, WMV), Archives (ZIP, RAR).
                                    Taille maximum : 50 MB.
                                </div>
                            </div>

                            <div id="file-preview" class="mt-3 d-none">
                                <div class="alert alert-info">
                                    <h6><i class="fas fa-file"></i> Aperçu du fichier :</h6>
                                    <div id="preview-content"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label asp-for="NotesSupplementaires" class="form-label"></label>
                                <textarea asp-for="NotesSupplementaires" class="form-control" rows="3" placeholder="Notes supplémentaires..."></textarea>
                                <span asp-validation-for="NotesSupplementaires" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Créer l'Échantillon
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fileInput = document.getElementById('Fichier');
            const previewDiv = document.getElementById('file-preview');
            const previewContent = document.getElementById('preview-content');

            fileInput.addEventListener('change', function (e) {
                const file = e.target.files[0];
                if (file) {
                    const fileInfo = `
                        <div class="row">
                            <div class="col-md-8">
                                <strong>Nom :</strong> ${file.name}<br>
                                <strong>Type :</strong> ${file.type}<br>
                                <strong>Taille :</strong> ${formatFileSize(file.size)}<br>
                                <strong>Dernière modification :</strong> ${new Date(file.lastModified).toLocaleString('fr-FR')}
                            </div>
                            <div class="col-md-4" id="image-preview">
                            </div>
                        </div>
                    `;

                    previewContent.innerHTML = fileInfo;

                    // Aperçu des images
                    if (file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            document.getElementById('image-preview').innerHTML =
                                `<img src="${e.target.result}" class="img-thumbnail" style="max-width: 150px; max-height: 150px;">`;
                        };
                        reader.readAsDataURL(file);
                    }

                    previewDiv.classList.remove('d-none');
                } else {
                    previewDiv.classList.add('d-none');
                }
            });

            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }

            // Validation côté client pour la taille des fichiers
            fileInput.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file && file.size > 50 * 1024 * 1024) { // 50MB
                    alert('Le fichier est trop volumineux. La taille maximum autorisée est de 50 MB.');
                    this.value = '';
                    previewDiv.classList.add('d-none');
                }
            });

            // Auto-génération du numéro d'échantillon si vide
            const numeroInput = document.querySelector('input[name="NumeroEchantillon"]');
            if (numeroInput && !numeroInput.value.trim()) {
                const now = new Date();
                const year = now.getFullYear();
                const month = String(now.getMonth() + 1).padStart(2, '0');
                const day = String(now.getDate()).padStart(2, '0');
                const hours = String(now.getHours()).padStart(2, '0');
                const minutes = String(now.getMinutes()).padStart(2, '0');
                const seconds = String(now.getSeconds()).padStart(2, '0');

                numeroInput.value = `ECH-${year}${month}${day}-${hours}${minutes}${seconds}`;
            }
        });
    </script>
}

