@model IEnumerable<WebApplication1.Models.Analyse.Analyse>

@{
    ViewData["Title"] = "Mes Rapports d'Analyse";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-alt"></i> @ViewData["Title"]</h2>
        <span class="badge bg-primary">@Model.Count() rapports</span>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle fa-3x mb-3"></i>
            <h4>Aucun rapport disponible</h4>
            <p>Vous n'avez pas encore généré de rapports d'analyse.</p>
            <a asp-action="MesResultats" class="btn btn-primary">
                <i class="fas fa-vial"></i> Voir mes résultats
            </a>
        </div>
    }
    else
    {
        <!-- Barre de recherche et filtres -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="input-group">
                            <input type="text" id="searchInput" class="form-control" placeholder="Rechercher...">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <select id="filterType" class="form-control">
                            <option value="">Tous les types</option>
                            @foreach (var type in Model.Select(a => a.TypeAnalyse).Distinct())
                            {
                                <option value="@type">@type</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <select id="filterDate" class="form-control">
                            <option value="">Toutes les dates</option>
                            <option value="week">Cette semaine</option>
                            <option value="month">Ce mois</option>
                            <option value="year">Cette année</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tableau des rapports -->
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Nom du rapport</th>
                        <th>Échantillon</th>
                        <th>Type d'analyse</th>
                        <th>Date</th>
                        <th>Taille</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rapport in Model)
                    {
                        <tr class="rapport-row"
                            data-type="@rapport.TypeAnalyse"
                            data-date="@rapport.DateAnalyse">
                            <td>
                                <i class="fas @(rapport.FichierContentType == "application/pdf" ? "fa-file-pdf text-danger" : "fa-file-word text-primary")"></i>
                                @rapport.NomFichier
                            </td>
                            <td>@rapport.Echantillon.NumeroEchantillon</td>
                            <td>
                                <span class="badge bg-info">
                                    @rapport.TypeAnalyse
                                </span>
                            </td>
                            <td>@rapport.DateAnalyse</td>
                            <td>@((rapport.FichierContenu.Length / 1024) < 1024 ? $"{rapport.FichierContenu.Length / 1024} Ko" : $"{rapport.FichierContenu.Length / (1024 * 1024)} Mo")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="TelechargerRapport" asp-route-analyseId="@rapport.Id"
                                       class="btn btn-outline-primary" title="Télécharger">
                                        <i class="fas fa-download"></i>
                                    </a>
                                    <a asp-controller="Analyses" asp-action="Details" asp-route-id="@rapport.EchantillonId"
                                       class="btn btn-outline-info" title="Voir détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <button class="btn btn-outline-danger delete-report"
                                            data-id="@rapport.Id" title="Supprimer">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Statistiques -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Count()</h5>
                        <p class="card-text">Rapports au total</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Count(r => r.FichierContentType == "application/pdf")</h5>
                        <p class="card-text">Fichiers PDF</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Count(r => r.FichierContentType.Contains("word"))</h5>
                        <p class="card-text">Fichiers Word</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer définitivement ce rapport ?</p>
                <p class="text-muted">Cette action est irréversible.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Supprimer</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Filtrage des rapports
            $('#filterType, #filterDate').change(function() {
                filterReports();
            });

            // Recherche en temps réel
            $('#searchInput').keyup(function() {
                filterReports();
            });

            function filterReports() {
                var searchText = $('#searchInput').val().toLowerCase();
                var typeFilter = $('#filterType').val();
                var dateFilter = $('#filterDate').val();
                var today = new Date();

                $('.rapport-row').each(function() {
                    var $row = $(this);
                    var show = true;
                    var rowText = $row.text().toLowerCase();
                    var rowType = $row.data('type');
                    var rowDate = new Date($row.data('date'));

                    // Filtre par recherche
                    if (searchText && !rowText.includes(searchText)) {
                        show = false;
                    }

                    // Filtre por type
                    if (typeFilter && rowType !== typeFilter) {
                        show = false;
                    }

                    // Filtre par date
                    if (dateFilter) {
                        var diffTime = today - rowDate;
                        var diffDays = diffTime / (1000 * 60 * 60 * 24);

                        switch(dateFilter) {
                            case 'week':
                                if (diffDays > 7) show = false;
                                break;
                            case 'month':
                                if (diffDays > 30) show = false;
                                break;
                            case 'year':
                                if (diffDays > 365) show = false;
                                break;
                        }
                    }

                    $row.toggle(show);
                });
            }

            // Gestion de la suppression
            var reportToDelete;
            $('.delete-report').click(function() {
                reportToDelete = $(this).data('id');
                $('#deleteModal').modal('show');
            });

            $('#confirmDelete').click(function() {
                if (reportToDelete) {
                    $.post('@Url.Action("SupprimerRapport", "Analyses")', { id: reportToDelete })
                        .done(function() {
                            location.reload();
                        })
                        .fail(function() {
                            alert('Erreur lors de la suppression');
                        });
                }
                $('#deleteModal').modal('hide');
            });
        });
    </script>
}

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
        cursor: pointer;
    }

    .badge-info {
        background-color: #17a2b8;
    }

    .fa-file-pdf {
        color: #d23333;
    }

    .fa-file-word {
        color: #2b579a;
    }

    .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
    }
</style>