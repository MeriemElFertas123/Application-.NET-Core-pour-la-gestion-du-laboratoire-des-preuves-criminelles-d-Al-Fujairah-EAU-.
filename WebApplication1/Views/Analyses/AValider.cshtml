@model IEnumerable<WebApplication1.Models.Stockage.Echantillon>

@{
    ViewData["Title"] = "Résultats à Valider";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="container">
    <h2><i class="fas fa-check-circle"></i> @ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Aucun résultat en attente de validation.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Numéro</th>
                        <th>Date fin analyse</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.NumeroEchantillon</strong>
                                @if (item.Priorite == WebApplication1.Models.Stockage.PrioriteEchantillon.Urgent)
                                {
                                    <span class="badge badge-danger ml-2">URGENT</span>
                                }
                            </td>
                            <td>
                                @if (item.DateFinAnalyse.HasValue)
                                {
                                    @item.DateFinAnalyse.Value.ToString("dd/MM/yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">Non définie</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="MesResultats" asp-route-id="@item.Id"
                                       class="btn btn-info btn-sm" title="Voir détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <form asp-action="ValiderResultat" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-success btn-sm"
                                                onclick="return confirm('Êtes-vous sûr de vouloir valider ces résultats ?')"
                                                title="Valider">
                                            <i class="fas fa-check"></i> Valider
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>