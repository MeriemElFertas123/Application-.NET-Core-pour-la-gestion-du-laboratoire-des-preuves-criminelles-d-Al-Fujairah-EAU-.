@model WebApplication1.Models.Enqueteur

@{
    ViewData["Title"] = "Créer un enquêteur";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="container py-4">
    <!-- Titre principal avec style -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-person-plus-fill me-2"></i> @ViewData["Title"]
        </h2>
        <p class="text-muted">Veuillez remplir les informations ci-dessous pour ajouter un nouvel enquêteur</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            <i class="bi bi-check-circle me-1"></i> @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">
            <i class="bi bi-exclamation-triangle me-1"></i> @TempData["ErrorMessage"]
        </div>
    }

    <form method="post" asp-action="Create" class="card shadow-lg p-4 rounded-3" novalidate>
        <h4 class="mb-3 text-secondary">
            <i class="bi bi-person-badge me-2"></i> Informations personnelles
        </h4>
        <hr />

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="nom" class="form-label">Nom *</label>
                <input asp-for="nom" class="form-control" required />
                <span asp-validation-for="nom" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="prenom" class="form-label">Prénom *</label>
                <input asp-for="prenom" class="form-control" required />
                <span asp-validation-for="prenom" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="grade" class="form-label">Grade *</label>
                <select asp-for="grade" asp-items="ViewBag.GradeList" class="form-select" required>
                    <option value="">-- Sélectionnez un grade --</option>
                </select>
                <span asp-validation-for="grade" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="service" class="form-label">Service</label>
                <select asp-for="service" asp-items="ViewBag.ServiceList" class="form-select">
                    <option value="">-- Sélectionnez un service --</option>
                </select>
                <span asp-validation-for="service" class="text-danger"></span>
            </div>
        </div>

        <h4 class="mt-4 mb-3 text-secondary">
            <i class="bi bi-shield-lock me-2"></i> Informations de connexion
        </h4>
        <hr />

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="email" class="form-label">Email *</label>
                <input name="email" type="email" class="form-control" required />
                <div class="invalid-feedback">
                    L'email est requis et doit être valide.
                </div>
            </div>
            <div class="col-md-6">
                <label for="password" class="form-label">Mot de passe *</label>
                <input name="password" type="password" class="form-control" required minlength="6" />
                <div class="invalid-feedback">
                    Le mot de passe doit contenir au moins 6 caractères.
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="bi bi-x-circle me-1"></i> Annuler
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle me-1"></i> Créer
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Validation personnalisée côté client
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Validation en temps réel
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const inputs = form.querySelectorAll('input[required], select[required]');

            inputs.forEach(function(input) {
                input.addEventListener('blur', function() {
                    if (input.value.trim() === '') {
                        input.classList.add('is-invalid');
                    } else {
                        input.classList.remove('is-invalid');
                        input.classList.add('is-valid');
                    }
                });

                input.addEventListener('input', function() {
                    if (input.classList.contains('is-invalid') && input.value.trim() !== '') {
                        input.classList.remove('is-invalid');
                        input.classList.add('is-valid');
                    }
                });
            });
        });
    </script>
}

<style>
    .is-invalid {
        border-color: #dc3545;
    }

    .is-valid {
        border-color: #28a745;
    }

    .invalid-feedback {
        display: block;
        color: #dc3545;
        font-size: 0.875em;
        margin-top: 0.25rem;
    }
</style>