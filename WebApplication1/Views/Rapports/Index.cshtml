@{
    ViewBag.Title = "gestion des rapports";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Rapports - Système de Scellé Judiciaire</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .btn-sign {
            background-color: #7b1fa2;
            color: white;
        }

            .btn-sign:hover {
                background-color: #9c27b0;
            }

        /* Styles pour la signature électronique */
        .signature-steps {
            margin-bottom: 2rem;
        }

        .step-indicator {
            display: flex;
            justify-content: space-between;
            position: relative;
            margin-bottom: 2rem;
        }

            .step-indicator::before {
                content: '';
                position: absolute;
                top: 20px;
                left: 0;
                right: 0;
                height: 2px;
                background: #e9ecef;
                z-index: 1;
            }

        .step {
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            z-index: 2;
        }

        .step-number {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #e9ecef;
            color: #6c757d;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            margin-bottom: 0.5rem;
            transition: all 0.3s ease;
        }

        .step.active .step-number {
            background: var(--primary-color);
            color: white;
            transform: scale(1.1);
        }

        .step.completed .step-number {
            background: var(--success-color);
            color: white;
        }

        .step-title {
            font-size: 0.85rem;
            font-weight: 600;
            text-align: center;
        }

        .signature-step-content {
            display: none;
            animation: fadeInUp 0.5s ease;
        }

            .signature-step-content.active {
                display: block;
            }

        .verification-checklist .form-check {
            padding: 1rem;
            border: 1px solid #e9ecef;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

            .verification-checklist .form-check:hover {
                border-color: var(--primary-color);
                background: rgba(0, 86, 179, 0.05);
            }

        .verification-checklist .form-check-input:checked + .form-check-label {
            color: var(--success-color);
        }

        .auth-methods {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        .auth-method-card {
            border: 2px solid #e9ecef;
            border-radius: 15px;
            padding: 1.5rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .auth-method-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.8), transparent);
                transition: left 0.6s ease;
            }

            .auth-method-card:hover::before {
                left: 100%;
            }

            .auth-method-card:hover {
                border-color: var(--primary-color);
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

            .auth-method-card.selected {
                border-color: var(--primary-color);
                background: rgba(0, 86, 179, 0.05);
                transform: scale(1.05);
            }

        .auth-method-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .auth-method-title {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #2c3e50;
        }

        .auth-method-desc {
            font-size: 0.85rem;
            color: #6c757d;
        }

        .signature-zone {
            border: 2px dashed #dee2e6;
            border-radius: 15px;
            padding: 2rem;
            background: #f8f9fa;
        }

        .signature-preview {
            background: white;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            padding: 2rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .signature-header {
            text-align: center;
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--primary-color);
            margin-bottom: 2rem;
        }

        .signer-info {
            display: flex;
            align-items: center;
            margin-bottom: 2rem;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 10px;
        }

        .signer-photo {
            font-size: 4rem;
            color: var(--primary-color);
            margin-right: 2rem;
        }

        .signer-name {
            font-size: 1.3rem;
            font-weight: bold;
            color: #2c3e50;
        }

        .signer-title {
            font-size: 1rem;
            color: var(--primary-color);
            font-weight: 600;
        }

        .signer-credentials {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 0.5rem;
        }

        .signature-metadata {
            background: #fff;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .metadata-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .hash-display {
            background: #e9ecef;
            padding: 0.2rem 0.5rem;
            border-radius: 4px;
            font-size: 0.75rem;
            font-family: 'Courier New', monospace;
        }

        .signature-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            border-top: 1px solid #e9ecef;
        }

        .signature-seal {
            display: flex;
            align-items: center;
            color: var(--primary-color);
        }

            .signature-seal i {
                font-size: 2rem;
                margin-right: 1rem;
            }

        .seal-text {
            text-align: center;
            font-weight: bold;
            font-size: 0.8rem;
            line-height: 1.2;
        }

        .qr-code-signature {
            text-align: center;
        }

        .qr-placeholder {
            width: 60px;
            height: 60px;
            border: 2px solid #dee2e6;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 0.5rem;
            font-size: 1.5rem;
            color: #6c757d;
        }

        .signature-options .form-check {
            padding: 0.75rem;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            background: #f8f9fa;
            transition: all 0.3s ease;
        }

            .signature-options .form-check:hover {
                border-color: var(--primary-color);
                background: rgba(0, 86, 179, 0.05);
            }

        .signature-verification {
            background: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 10px;
            padding: 1rem;
        }

        .verification-code {
            background: white;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            padding: 0.5rem;
            margin: 0.5rem 0;
            text-align: center;
        }

            .verification-code code {
                background: none;
                color: var(--primary-color);
                font-weight: bold;
            }

        /* Animations pour les notifications de signature */
        .signature-success-animation {
            animation: signatureSuccess 1s ease-in-out;
        }

        keyframes signatureSuccess {
            0%

        {
            transform: scale(0.8);
            opacity: 0;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }

        }

        /* Styles pour les formulaires d'auth */
        .auth-form {
            background: white;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            padding: 1.5rem;
            margin-top: 1rem;
        }

        .biometric-scanner {
            text-align: center;
            padding: 2rem;
            border: 2px dashed #28a745;
            border-radius: 10px;
            background: rgba(40, 167, 69, 0.05);
        }

            .biometric-scanner.active {
                border-color: #007bff;
                background: rgba(0, 123, 255, 0.05);
                animation: pulse 2s infinite;
            }

        .smartcard-reader {
            text-align: center;
            padding: 2rem;
            border: 2px dashed #17a2b8;
            border-radius: 10px;
            background: rgba(23, 162, 184, 0.05);
        }

            .smartcard-reader.connected {
                border-color: #28a745;
                background: rgba(40, 167, 69, 0.05);
            }

        .certificate-info {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 1rem;
            margin-top: 1rem;
        }

        .certificate-valid {
            color: #28a745;
        }

        .certificate-invalid {
            color: #dc3545;
        }

        media (max-width: 768px) {
            .auth-methods

        {
            grid-template-columns: 1fr;
        }

        .signer-info {
            flex-direction: column;
            text-align: center;
        }

        .signer-photo {
            margin-right: 0;
            margin-bottom: 1rem;
        }

        .signature-footer {
            flex-direction: column;
            gap: 1rem;
        }

        }

        :root {
            --primary-color: #0056b3;
            --success-color: #198754;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
            --info-color: #0dcaf0;
            --secondary-color: #6c757d;
        }

        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .page-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, #0041a3 100%);
            color: white;
            padding: 2.5rem 0;
            margin-bottom: 2rem;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            position: relative;
            overflow: hidden;
        }

            .page-header::before {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                width: 100px;
                height: 100px;
                background: rgba(255,255,255,0.1);
                border-radius: 50%;
                transform: translate(20px, -20px);
            }

        .page-title {
            font-size: 2.8rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .page-subtitle {
            opacity: 0.9;
            font-size: 1.2rem;
            font-weight: 300;
        }

        .quick-actions {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            border: 1px solid rgba(0,86,179,0.1);
        }

        .action-card {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            border: 2px solid transparent;
            border-radius: 15px;
            padding: 2rem;
            text-align: center;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

            .action-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.8), transparent);
                transition: left 0.6s ease;
            }

            .action-card:hover::before {
                left: 100%;
            }

            .action-card:hover {
                transform: translateY(-8px) scale(1.02);
                box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            }

            .action-card.analysis {
                border-color: var(--success-color);
            }

                .action-card.analysis:hover {
                    background: linear-gradient(135deg, #e8f5e8 0%, #d4edda 100%);
                    border-color: var(--success-color);
                }

            .action-card.technical {
                border-color: var(--info-color);
            }

                .action-card.technical:hover {
                    background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
                    border-color: var(--info-color);
                }

            .action-card.expert {
                border-color: var(--warning-color);
            }

                .action-card.expert:hover {
                    background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);
                    border-color: var(--warning-color);
                }

            .action-card.custom {
                border-color: var(--secondary-color);
            }

                .action-card.custom:hover {
                    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
                    border-color: var(--secondary-color);
                }

        .action-icon {
            font-size: 4rem;
            margin-bottom: 1.5rem;
            display: block;
            transition: all 0.3s ease;
        }

        .action-card:hover .action-icon {
            transform: scale(1.1) rotate(5deg);
        }

        .action-title {
            font-size: 1.4rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: #2c3e50;
        }

        .action-description {
            color: #6c757d;
            font-size: 0.95rem;
            line-height: 1.6;
        }

        .reports-section {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .section-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 2rem;
            padding-bottom: 0.5rem;
            border-bottom: 3px solid var(--primary-color);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .reports-table {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .table {
            margin: 0;
        }

            .table thead th {
                background: linear-gradient(135deg, var(--primary-color) 0%, #0041a3 100%);
                color: white;
                border: none;
                font-weight: 600;
                padding: 1.2rem;
                font-size: 0.95rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .table tbody td {
                padding: 1.2rem;
                vertical-align: middle;
                border-color: #f1f3f4;
            }

            .table tbody tr {
                transition: all 0.3s ease;
            }

                .table tbody tr:hover {
                    background-color: #f8f9fa;
                    transform: scale(1.01);
                    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
                }

        .status-badge {
            padding: 0.6rem 1.2rem;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .status-draft {
            background-color: #fff3e0;
            color: #f57c00;
        }

        .status-pending {
            background-color: #e3f2fd;
            color: #1976d2;
        }

        .status-validated {
            background-color: #e8f5e8;
            color: #2e7d32;
        }

        .status-signed {
            background-color: #f3e5f5;
            color: #7b1fa2;
        }

        .status-archived {
            background-color: #f5f5f5;
            color: #616161;
        }

        .type-badge {
            padding: 0.4rem 1rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
        }

        .type-analysis {
            background-color: #e8f5e8;
            color: #2e7d32;
        }

        .type-technical {
            background-color: #e3f2fd;
            color: #1976d2;
        }

        .type-expert {
            background-color: #fff8e1;
            color: #f57c00;
        }

        .priority-badge {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 0.5rem;
        }

        .priority-low {
            background-color: var(--success-color);
        }

        .priority-medium {
            background-color: var(--warning-color);
        }

        .priority-high {
            background-color: var(--danger-color);
        }

        .priority-urgent {
            background-color: var(--danger-color);
            animation: pulse 2s infinite;
            box-shadow: 0 0 10px rgba(220, 53, 69, 0.5);
        }

        keyframes pulse {
            0%

        {
            transform: scale(1);
            opacity: 1;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }

        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
            justify-content: flex-end;
        }

        .btn-action {
            padding: 0.5rem;
            border: none;
            border-radius: 8px;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .btn-action::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 0;
                height: 0;
                background: rgba(255,255,255,0.3);
                border-radius: 50%;
                transform: translate(-50%, -50%);
                transition: all 0.3s ease;
            }

            .btn-action:hover::before {
                width: 100px;
                height: 100px;
            }

        .btn-view {
            background-color: var(--info-color);
            color: white;
        }

        .btn-edit {
            background-color: var(--warning-color);
            color: white;
        }

        .btn-download {
            background-color: var(--success-color);
            color: white;
        }

        .btn-delete {
            background-color: var(--danger-color);
            color: white;
        }

        .btn-action:hover {
            transform: translateY(-2px) scale(1.1);
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }

        .filters-section {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            border: 1px solid #e9ecef;
        }

        .form-control, .form-select {
            border-radius: 10px;
            border: 2px solid #e9ecef;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(0, 86, 179, 0.15);
                transform: translateY(-1px);
            }

        .btn-primary-custom {
            background: linear-gradient(135deg, var(--primary-color) 0%, #0041a3 100%);
            color: white;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 86, 179, 0.3);
        }

            .btn-primary-custom:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(0, 86, 179, 0.4);
            }

        .modal-content {
            border-radius: 20px;
            border: none;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
        }

        .modal-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, #0041a3 100%);
            color: white;
            border: none;
            padding: 2rem;
        }

        .modal-title {
            font-size: 1.5rem;
            font-weight: 600;
        }

        .modal-body {
            padding: 2rem;
        }

        .form-wizard {
            position: relative;
        }

        .wizard-steps {
            display: flex;
            justify-content: space-between;
            margin-bottom: 3rem;
            position: relative;
        }

            .wizard-steps::before {
                content: '';
                position: absolute;
                top: 20px;
                left: 0;
                right: 0;
                height: 2px;
                background: #e9ecef;
                z-index: 1;
            }

        .wizard-step {
            background: white;
            border: 3px solid #e9ecef;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            z-index: 2;
            transition: all 0.3s ease;
            position: relative;
        }

            .wizard-step.active {
                background: var(--primary-color);
                border-color: var(--primary-color);
                color: white;
                transform: scale(1.2);
            }

            .wizard-step.completed {
                background: var(--success-color);
                border-color: var(--success-color);
                color: white;
            }

        .step-label {
            position: absolute;
            top: 50px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 0.85rem;
            font-weight: 600;
            white-space: nowrap;
        }

        .step-content {
            display: none;
            animation: fadeInUp 0.5s ease;
        }

            .step-content.active {
                display: block;
            }

        keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .chart-container {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            border-left: 5px solid;
            transition: all 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0,0,0,0.15);
            }

            .stat-card.total {
                border-left-color: var(--info-color);
            }

            .stat-card.draft {
                border-left-color: var(--warning-color);
            }

            .stat-card.validated {
                border-left-color: var(--success-color);
            }

            .stat-card.archived {
                border-left-color: var(--secondary-color);
            }

        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
