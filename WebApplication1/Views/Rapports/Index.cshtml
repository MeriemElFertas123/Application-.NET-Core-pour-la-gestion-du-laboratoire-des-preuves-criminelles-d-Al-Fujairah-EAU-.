                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-trash-alt text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h5 class="text-center">Êtes-vous sûr de vouloir supprimer ce rapport ?</h5>
                    <p class="text-center text-muted">Cette action est irréversible. Le rapport sera définitivement supprimé du système.</p>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Attention :</strong> La suppression d'un rapport validé ou signé peut avoir des conséquences légales.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Annuler
                    </button>
                    <button type="button" class="btn btn-danger" onclick="confirmDelete()" id="confirmDeleteBtn">
                        <i class="fas fa-trash"></i> Supprimer Définitivement
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentStep = 1;
        let selectedReportType = null;
        let reportToDelete = null;

        // Données fictives
        const reportsData = {
            'RAP-2024-001': {
                title: 'Analyse ADN - Séquençage',
                type: 'analysis',
                case: 'AFF-2024-001',
                status: 'validated',
                created: '15/01/2024',
                priority: 'high'
            },
            'RAP-2024-015': {
                title: 'Expertise Technique',
                type: 'technical',
                case: 'AFF-2024-008',
                status: 'pending',
                created: '22/02/2024',
                priority: 'urgent'
            },
            'RAP-2024-032': {
                title: 'Expertise Judiciaire',
                type: 'expert',
                case: 'AFF-2024-023',
                status: 'signed',
                created: '05/03/2024',
                priority: 'medium'
            }
        };

        // Initialisation
        document.addEventListener('DOMContentLoaded', function () {
            // Animation des éléments au chargement
            setTimeout(() => {
                document.querySelectorAll('.fade-in').forEach(element => {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                });
            }, 100);

            // Gestion des sélecteurs de template
            document.querySelectorAll('.template-card').forEach(card => {
                card.addEventListener('click', function () {
                    document.querySelectorAll('.template-card').forEach(c => c.classList.remove('selected'));
                    this.classList.add('selected');
                    selectedReportType = this.dataset.type;
                });
            });
        });

        // Fonctions du Wizard
        function startReportWizard(type = null) {
            if (type) {
                selectedReportType = type;
                document.querySelector(`[data-type="${type}"]`).classList.add('selected');
            }

            const modal = new bootstrap.Modal(document.getElementById('reportWizardModal'));
            modal.show();

            // Reset wizard
            currentStep = 1;
            updateWizardStep();
        }

        function nextStep() {
            if (validateCurrentStep()) {
                if (currentStep < 4) {
                    currentStep++;
                    updateWizardStep();
                }
            }
        }

        function previousStep() {
            if (currentStep > 1) {
                currentStep--;
                updateWizardStep();
            }
        }

        function updateWizardStep() {
            // Mise à jour des indicateurs d'étape
            document.querySelectorAll('.wizard-step').forEach((step, index) => {
                step.classList.remove('active', 'completed');
                if (index + 1 < currentStep) {
                    step.classList.add('completed');
                } else if (index + 1 === currentStep) {
                    step.classList.add('active');
                }
            });

            // Mise à jour du contenu
            document.querySelectorAll('.step-content').forEach((content, index) => {
                content.classList.remove('active');
                if (index + 1 === currentStep) {
                    content.classList.add('active');
                }
            });

            // Mise à jour des boutons
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const createBtn = document.getElementById('createBtn');

            prevBtn.style.display = currentStep > 1 ? 'inline-block' : 'none';
            nextBtn.style.display = currentStep < 4 ? 'inline-block' : 'none';
            createBtn.style.display = currentStep === 4 ? 'inline-block' : 'none';
        }

        function validateCurrentStep() {
            switch (currentStep) {
                case 1:
                    if (!selectedReportType) {
                        showNotification('warning', 'Veuillez sélectionner un type de rapport.');
                        return false;
                    }
                    return true;

                case 2:
                    const title = document.getElementById('reportTitle').value.trim();
                    const associatedCase = document.getElementById('associatedCase').value;

                    if (!title) {
                        showNotification('warning', 'Le titre du rapport est requis.');
                        document.getElementById('reportTitle').focus();
                        return false;
                    }

                    if (!associatedCase) {
                        showNotification('warning', 'Veuillez sélectionner une affaire associée.');
                        document.getElementById('associatedCase').focus();
                        return false;
                    }
                    return true;

                case 3:
                    return true; // Pas de validation obligatoire pour l'étape 3

                case 4:
                    return true;

                default:
                    return true;
            }
        }

        function generatePreview() {
            showLoading();

            setTimeout(() => {
                hideLoading();

                // Collecter les données du formulaire
                const title = document.getElementById('reportTitle').value || 'Sans titre';
                const associatedCase = document.getElementById('associatedCase').value || 'Non spécifiée';
                const priority = document.getElementById('reportPriority').value;
                const deadline = document.getElementById('reportDeadline').value || 'Non définie';
                const requester = document.getElementById('reportRequester').value || 'Non spécifié';
                const language = document.getElementById('reportLanguage').value;
                const description = document.getElementById('reportDescription').value || 'Aucune description';

                // Remplir l'aperçu
                document.getElementById('previewTitle').textContent = title;
                document.getElementById('previewCase').textContent = associatedCase;
                document.getElementById('previewType').textContent = getReportTypeName(selectedReportType);
                document.getElementById('previewPriority').textContent = getPriorityName(priority);
                document.getElementById('previewDeadline').textContent = deadline;
                document.getElementById('previewRequester').textContent = requester;
                document.getElementById('previewLanguage').textContent = getLanguageName(language);
                document.getElementById('previewDescription').textContent = description;

                // Sections incluses
                const sections = [];
                document.querySelectorAll('input[type="checkbox"]:checked').forEach(checkbox => {
                    const label = checkbox.nextElementSibling.textContent.trim();
                    if (checkbox.id.startsWith('section')) {
                        sections.push(`<li><i class="fas fa-check text-success me-2"></i>${label}</li>`);
                    }
                });
                document.getElementById('previewSections').innerHTML = sections.join('');

                // Afficher l'aperçu
                document.getElementById('reportPreview').style.display = 'none';
                document.getElementById('previewContent').style.display = 'block';

                showNotification('success', 'Aperçu généré avec succès');
            }, 1500);
        }

        function createReport() {
            showLoading();

            setTimeout(() => {
                hideLoading();

                // Générer un numéro de rapport
                const reportNumber = 'RAP-' + new Date().getFullYear() + '-' + String(Math.floor(Math.random() * 1000)).padStart(3, '0');

                showNotification('success', `Rapport ${reportNumber} créé avec succès !`);

                // Fermer le modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('reportWizardModal'));
                modal.hide();

                // Réinitialiser le formulaire
                resetWizard();

                // Simuler l'ajout dans la liste (optionnel)
                setTimeout(() => {
                    showNotification('info', 'Redirection vers l\'éditeur de rapport...');
                }, 1000);

            }, 2000);
        }

        function resetWizard() {
            currentStep = 1;
            selectedReportType = null;
            document.querySelectorAll('.template-card').forEach(card => card.classList.remove('selected'));
            document.getElementById('reportWizardModal').querySelectorAll('input, select, textarea').forEach(input => {
                if (input.type === 'checkbox' || input.type === 'radio') {
                    input.checked = false;
                } else {
                    input.value = '';
                }
            });
            // Réinitialiser les valeurs par défaut
            document.getElementById('reportPriority').value = 'medium';
            document.getElementById('reportLanguage').value = 'fr';
            document.querySelectorAll('#sectionIntroduction, #sectionMethodology, #sectionResults, #sectionAnalysis, #sectionConclusions, #sectionAnnexes, #includeImages, #includeQRCode, #digitalSignature, #formatPDF').forEach(input => {
                input.checked = true;
            });
            updateWizardStep();
        }

        // Fonctions de gestion des rapports
        function viewReport(reportId) {
            showLoading();

            setTimeout(() => {
                hideLoading();

                // Simuler le chargement du contenu
                const reportData = reportsData[reportId];
                if (reportData) {
                    document.getElementById('viewReportModalLabel').innerHTML = `
                                <i class="fas fa-file-alt"></i> ${reportData.title} - ${reportId}
                            `;

                    document.getElementById('reportViewer').innerHTML = `
                                <div class="card">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="mb-0">${reportData.title}</h5>
                                        <small>${reportId} - ${reportData.case}</small>
                                    </div>
                                    <div class="card-body">
                                        <div class="row mb-4">
                                            <div class="col-md-6">
                                                <p><strong>Type :</strong> ${getReportTypeName(reportData.type)}</p>
                                                <p><strong>Statut :</strong> ${getStatusName(reportData.status)}</p>
                                                <p><strong>Priorité :</strong> ${getPriorityName(reportData.priority)}</p>
                                            </div>
                                            <div class="col-md-6">
                                                <p><strong>Créé le :</strong> ${reportData.created}</p>
                                                <p><strong>Affaire :</strong> ${reportData.case}</p>
                                                <p><strong>Auteur :</strong> Dr. Martin Dubois</p>
                                            </div>
                                        </div>

                                        <hr>

                                        <h6><i class="fas fa-list-ul me-2"></i>Table des Matières</h6>
                                        <ol class="mb-4">
                                            <li>Introduction</li>
                                            <li>Méthodologie</li>
                                            <li>Résultats d'analyse</li>
                                            <li>Discussion et interprétation</li>
                                            <li>Conclusions</li>
                                            <li>Annexes</li>
                                        </ol>

                                        <h6><i class="fas fa-file-alt me-2"></i>Résumé Exécutif</h6>
                                        <p class="text-muted">
                                            Ce rapport présente les résultats des analyses effectuées sur les échantillons
                                            collectés dans le cadre de l'affaire ${reportData.case}. Les analyses ont été
                                            menées selon les protocoles standards et les conclusions sont basées sur des
                                            méthodes scientifiquement validées.
                                        </p>

                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle me-2"></i>
                                            <strong>Note :</strong> Ceci est un aperçu simplifié. Le rapport complet contient
                                            tous les détails techniques, graphiques et annexes nécessaires.
                                        </div>
                                    </div>
                                </div>
                            `;

                    const modal = new bootstrap.Modal(document.getElementById('viewReportModal'));
                    modal.show();
                }
            }, 1000);
        }

        function editReport(reportId) {
            showNotification('info', `Ouverture de l'éditeur pour le rapport ${reportId}...`);
            // Simuler la redirection vers l'éditeur
        }

        function downloadReport(reportId) {
            showLoading();

            setTimeout(() => {
                hideLoading();
                showNotification('success', `Téléchargement du rapport ${reportId} démarré`);

                // Simuler le téléchargement
                const link = document.createElement('a');
                link.href = '#';
                link.download = `${reportId}_rapport.pdf`;
                link.click();
            }, 1500);
        }

        function deleteReport(reportId) {
            reportToDelete = reportId;
            const modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
            modal.show();
        }

        function confirmDelete() {
            if (reportToDelete) {
                showLoading();

                setTimeout(() => {
                    hideLoading();

                    // Supprimer la ligne du tableau
                    const rows = document.querySelectorAll('tbody tr');
                    rows.forEach(row => {
                        if (row.textContent.includes(reportToDelete)) {
                            row.style.transition = 'all 0.5s ease';
                            row.style.opacity = '0';
                            row.style.transform = 'translateX(-100%)';
                            setTimeout(() => row.remove(), 500);
                        }
                    });

                    showNotification('success', `Rapport ${reportToDelete} supprimé avec succès`);

                    // Fermer le modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('deleteConfirmModal'));
                    modal.hide();

                    reportToDelete = null;

                    // Mettre à jour les statistiques
                    updateStats(-1);
                }, 1500);
            }
        }

        // Fonctions utilitaires
        function applyFilters() {
            showLoading();
            setTimeout(() => {
                hideLoading();
                showNotification('success', 'Filtres appliqués avec succès');
            }, 1000);
        }

        function refreshData() {
            showLoading();
            setTimeout(() => {
                hideLoading();
                showNotification('success', 'Données actualisées');
            }, 1500);
        }

        function printReport() {
            window.print();
        }

        function downloadCurrentReport() {
            showNotification('success', 'Téléchargement du rapport en cours...');
        }

        function updateStats(delta = 0) {
            const totalElement = document.querySelector('.stat-card.total .stat-number');
            if (totalElement) {
                const currentTotal = parseInt(totalElement.textContent);
                totalElement.textContent = Math.max(0, currentTotal + delta);

                // Animation
                totalElement.style.transform = 'scale(1.1)';
                totalElement.style.color = '#dc3545';
                setTimeout(() => {
                    totalElement.style.transform = 'scale(1)';
                    totalElement.style.color = '';
                }, 300);
            }
        }

        // Fonctions d'aide pour les noms
        function getReportTypeName(type) {
            const types = {
                'analysis': 'Rapport d\'Analyse',
                'technical': 'Rapport Technique',
                'expert': 'Rapport d\'Expertise',
                'custom': 'Rapport Personnalisé'
            };
            return types[type] || type;
        }

        function getPriorityName(priority) {
            const priorities = {
                'low': 'Faible',
                'medium': 'Moyenne',
                'high': 'Haute',
                'urgent': 'Urgente'
            };
            return priorities[priority] || priority;
        }

        function getLanguageName(language) {
            const languages = {
                'fr': 'Français',
                'ar': 'العربية',
                'en': 'English'
            };
            return languages[language] || language;
        }

        function getStatusName(status) {
            const statuses = {
                'draft': 'Brouillon',
                'pending': 'En attente',
                'validated': 'Validé',
                'signed': 'Signé',
                'archived': 'Archivé'
            };
            return statuses[status] || status;
        }

        function showLoading() {
            document.getElementById('loadingOverlay').style.display = 'flex';
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').style.display = 'none';
        }

        function showNotification(type, message) {
            const alertClass = type === 'success' ? 'alert-success' :
                type === 'info' ? 'alert-info' :
                    type === 'warning' ? 'alert-warning' : 'alert-danger';
            const icon = type === 'success' ? 'fa-check-circle' :
                type === 'info' ? 'fa-info-circle' :
                    type === 'warning' ? 'fa-exclamation-triangle' : 'fa-exclamation-circle';

            const notification = document.createElement('div');
            notification.className = `alert ${alertClass} alert-dismissible fade show position-fixed`;
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 10000; min-width: 300px; max-width: 500px;';
            notification.innerHTML = `
                        <i class="fas ${icon} me-2"></i>${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    `;

            document.body.appendChild(notification);

            // Auto-dismiss après 5 secondes
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 5000);
        }

        // Raccourcis clavier
        document.addEventListener('keydown', function (e) {
            // Échap pour fermer les modals
            if (e.key === 'Escape') {
                const modals = document.querySelectorAll('.modal.show');
                modals.forEach(modal => {
                    const instance = bootstrap.Modal.getInstance(modal);
                    if (instance) instance.hide();
                });
            }

            // Ctrl+N pour nouveau rapport
            if (e.ctrlKey && e.key === 'n') {
                e.preventDefault();
                startReportWizard();
            }

            // Ctrl+R pour actualiser
            if (e.ctrlKey && e.key === 'r') {
                e.preventDefault();
                refreshData();
            }

            // F3 pour recherche
            if (e.key === 'F3') {
                e.preventDefault();
                document.getElementById('filterType').focus();
            }
        });

        // Animation au scroll
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        });

        // Observer les éléments animés
        document.querySelectorAll('.fade-in').forEach(element => {
            element.style.opacity = '0';
            element.style.transform = 'translateY(20px)';
            element.style.transition = 'all 0.6s ease';
            observer.observe(element);
        });
    </script>
