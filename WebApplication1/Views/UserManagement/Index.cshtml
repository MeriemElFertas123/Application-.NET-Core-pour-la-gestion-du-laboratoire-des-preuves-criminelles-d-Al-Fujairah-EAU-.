@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="container py-4">
    <!-- Titre principal avec style -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-people-fill me-2"></i> Gestion des utilisateurs
        </h2>
        <p class="text-muted">Gérez les différents types d'utilisateurs du système</p>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow-lg h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person-badge me-2"></i>Enquêteurs
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Ajouter, modifier ou supprimer des enquêteurs.</p>
                </div>
                <div class="card-footer bg-transparent">
                    <a href="@Url.Action("Index", "Enqueteurs")" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Accéder
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-center shadow-lg h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person-vcard me-2"></i>Analystes
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Ajouter, modifier ou supprimer des analystes.</p>
                </div>
                <div class="card-footer bg-transparent">
                    <a href="@Url.Action("Index", "Analystes")" class="btn btn-success">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Accéder
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-center shadow-lg h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-tools me-2"></i>Techniciens
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Ajouter, modifier ou supprimer des techniciens.</p>
                </div>
                <div class="card-footer bg-transparent">
                    <a href="@Url.Action("Index", "Techniciens")" class="btn btn-info">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Accéder
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 0.5rem;
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
    }
</style>