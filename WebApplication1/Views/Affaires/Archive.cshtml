@model WebApplication1.ViewModels.ArchiverAffaireViewModel

@{
    ViewBag.Title = "Archiver des affaires";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="archiver-container">
    <div class="page-header">
        <div class="header-content">
            <h1><i class="fas fa-archive"></i> Archivage d'affaires</h1>
            <p class="subtitle">Transférer les affaires clôturées vers les archives pour stockage à long terme</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="notification success">
            <i class="fas fa-check-circle"></i>
            <span>@TempData["SuccessMessage"]</span>
            <button class="close-btn" onclick="this.parentElement.style.display='none'">&times;</button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="notification error">
            <i class="fas fa-exclamation-circle"></i>
            <span>@TempData["ErrorMessage"]</span>
            <button class="close-btn" onclick="this.parentElement.style.display='none'">&times;</button>
        </div>
    }

    <!-- Filtres et recherche -->
    <div class="filters-section">
        <div class="section-card">
            <div class="section-header">
                <h3><i class="fas fa-filter"></i> Filtres de recherche</h3>
                <button class="btn btn-sm btn-outline" id="toggleFilters">
                    <i class="fas fa-chevron-down"></i>
                    <span>Afficher les filtres</span>
                </button>
            </div>

            <div class="section-content filters-content" id="filtersContent" style="display: none;">
                <div class="filters-grid">
                    <div class="filter-group">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt"></i>
                            Période de clôture
                        </label>
                        <div class="date-range">
                            <input type="date" class="form-control" id="dateDebut" placeholder="Date début">
                            <span class="date-separator">à</span>
                            <input type="date" class="form-control" id="dateFin" placeholder="Date fin">
                        </div>
                    </div>

                    <div class="filter-group">
                        <label class="form-label">
                            <i class="fas fa-flag"></i>
