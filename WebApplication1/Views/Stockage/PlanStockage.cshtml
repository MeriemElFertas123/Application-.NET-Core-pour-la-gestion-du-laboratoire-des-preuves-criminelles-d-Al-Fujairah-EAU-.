@model WebApplication1.Models.Stockage.PlanStockageViewModel
@{
    ViewBag.Title = "Plan de Stockage";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">@Html.ActionLink("Stockage", "Index")</li>
                <li class="breadcrumb-item active">Plan de stockage</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2><i class="fas fa-map text-primary"></i> Plan de Stockage</h2>
                <p class="text-muted">Vue d'ensemble des zones et emplacements de stockage</p>
            </div>
            <div>
                <button class="btn btn-outline-primary me-2" onclick="toggleView()">
                    <i class="fas fa-exchange-alt"></i> Changer vue
                </button>
                <button class="btn btn-success" onclick="window.print()">
                    <i class="fas fa-print"></i> Imprimer
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Légende -->
<div class="row mb-3">
    <div class="col-12">
        <div class="card">
            <div class="card-body py-2">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <strong>Légende :</strong>
                        <span class="badge bg-success ms-2">Libre</span>
                        <span class="badge bg-warning ms-1">Occupé</span>
                    </div>
                    <div class="col-md-4 text-end">
                        <div class="btn-group btn-group-sm" role="group">
                            <input type="radio" class="btn-check" name="filtreStatut" id="tous" value="" checked>
                            <label class="btn btn-outline-primary" for="tous">Tous</label>

                            <input type="radio" class="btn-check" name="filtreStatut" id="libres" value="libre">
                            <label class="btn btn-outline-success" for="libres">Libres</label>

                            <input type="radio" class="btn-check" name="filtreStatut" id="occupes" value="occupe">
                            <label class="btn btn-outline-warning" for="occupes">Occupés</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Plan de stockage par zones -->
@foreach (var zone in Model.Zones)
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card zone-card" data-zone="@zone.Code">
                <div class="card-header bg-primary text-white">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="mb-0">
                                <i class="fas @GetZoneIcon(zone.Code)"></i>
                                Zone @zone.Code - @zone.Nom
                            </h5>
                            <small>Température: @zone.Temperature</small>
                        </div>
                        <div class="col-md-4 text-end">
                            <span class="badge bg-light text-dark fs-6">
                                @zone.Emplacements.Count(e => e.EstOccupe)/@zone.Emplacements.Count emplacements
                            </span>
                            <div class="progress mt-1" style="height: 8px;">
                                @{
                                    var tauxOccupation = zone.Emplacements.Count > 0 ?
                                        (int)((double)zone.Emplacements.Count(e => e.EstOccupe) / zone.Emplacements.Count * 100) : 0;
                                }
                                <div class="progress-bar @(tauxOccupation > 80 ? "bg-danger" : tauxOccupation > 60 ? "bg-warning" : "bg-success")"
                                     style="width: @tauxOccupation%"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="storage-grid" id="grid-@zone.Code">
                        @foreach (var emplacement in zone.Emplacements.OrderBy(e => e.Numero))
                        {
                            var statut = emplacement.EstOccupe ? "occupe" : "libre";
                            var badgeClass = emplacement.EstOccupe ? "bg-warning" : "bg-success";
                            var iconClass = emplacement.EstOccupe ? "fas fa-vial" : "fas fa-plus";
                            var echantillonInfo = emplacement.EstOccupe ?
                                $"ECH-{emplacement.EchantillonId}" : "Disponible";

                            <div class="storage-slot @statut"
                                 data-emplacement="@emplacement.Zone-@emplacement.Numero"
                                 data-statut="@statut"
                                 data-zone="@emplacement.Zone"
                                 onclick="voirDetailsEmplacement('@emplacement.Zone-@emplacement.Numero')"
                                 title="@emplacement.Zone-@emplacement.Numero - @(emplacement.EstOccupe ? "Occupé" : "Libre")">

                                <div class="slot-header">
                                    <small class="slot-id">@emplacement.Zone-@emplacement.Numero</small>
                                    <span class="badge @badgeClass slot-status">@(emplacement.EstOccupe ? "O" : "L")</span>
                                </div>

                                <div class="slot-content">
                                    <i class="@iconClass slot-icon"></i>
                                    @if (emplacement.EstOccupe)
                                    {
                                        <small class="slot-sample">@echantillonInfo</small>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal détails emplacement -->
<div class="modal fade" id="detailsEmplacementModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-map-marker-alt"></i> Détails de l'emplacement</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="detailsEmplacementContent">
                <!-- Contenu chargé dynamiquement -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                <button type="button" class="btn btn-primary" id="btnLibererEmplacement" style="display: none;">
                    <i class="fas fa-unlock"></i> Libérer l'emplacement
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    $(document).ready(function() {
        // Filtrage par statut
        $('input[name="filtreStatut"]').change(function() {
            var filtre = $(this).val();

            $('.storage-slot').each(function() {
                var slot = $(this);
                var statut = slot.data('statut');

                if (!filtre || statut === filtre) {
                    slot.show();
                } else {
                    slot.hide();
                }
            });
        });
    });

    function voirDetailsEmplacement(emplacementId) {
        $.get('@Url.Action("GetEmplacementDetails", "Stockage")', { emplacement: emplacementId }, function(data) {
            $('#detailsEmplacementContent').html(data);
            $('#detailsEmplacementModal').modal('show');

            // Afficher ou masquer le bouton de libération
            if ($('#detailsEmplacementContent').find('.badge.bg-warning').length > 0) {
                $('#btnLibererEmplacement').show();
            } else {
                $('#btnLibererEmplacement').hide();
            }
        });
    }

    function toggleView() {
        $('.storage-grid').toggleClass('list-view');
    }

    // Gestion de la libération d'emplacement
    $('#btnLibererEmplacement').click(function() {
        var emplacementId = $('#detailsEmplacementContent').find('tr:first td:last').text();

        if (confirm(`Voulez-vous vraiment libérer l'emplacement ${emplacementId} ?`)) {
            $.post('@Url.Action("LibererEmplacement", "Stockage")', { emplacement: emplacementId }, function() {
                location.reload();
            });
        }
    });
    </script>
}

<!-- Le reste du CSS peut rester identique -->

@section Styles {
    <style>
        .storage-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
            gap: 10px;
            padding: 15px;
        }

            .storage-grid.list-view {
                grid-template-columns: 1fr;
                gap: 5px;
            }

        .storage-slot {
            aspect-ratio: 1;
            border: 2px solid #dee2e6;
            border-radius: 8px;
            padding: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            background: white;
            display: flex;
            flex-direction: column;
            position: relative;
        }

        .storage-grid.list-view .storage-slot {
            aspect-ratio: auto;
            height: 60px;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
        }

        .storage-slot.libre {
            border-color: #28a745;
            background: #f8fff9;
        }

        .storage-slot.occupe {
            border-color: #ffc107;
            background: #fffbf0;
        }

        .storage-slot.indisponible {
            border-color: #dc3545;
            background: #fff5f5;
        }

        .storage-slot:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border-color: #007bff;
        }

        .slot-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 5px;
        }

        .storage-grid.list-view .slot-header {
            margin-bottom: 0;
        }

        .slot-id {
            font-weight: bold;
            font-size: 0.8rem;
        }

        .slot-status {
            font-size: 0.7rem;
            padding: 2px 4px;
        }

        .slot-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .storage-grid.list-view .slot-content {
            flex-direction: row;
            align-items: center;
        }

        .slot-icon {
            font-size: 1.5rem;
            margin-bottom: 5px;
            color: #6c757d;
        }

        .storage-grid.list-view .slot-icon {
            margin-bottom: 0;
            margin-right: 10px;
        }

        .slot-sample {
            font-size: 0.7rem;
            color: #495057;
            text-align: center;
        }

        .zone-card {
            margin-bottom: 2rem;
        }

        .pulse {
            animation: pulse 1s;
        }

        keyframes pulse {
            0%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }

        }

        media print {
            .btn, .breadcrumb, .modal

        {
            display: none !important;
        }

        .storage-slot {
            break-inside: avoid;
        }

        .zone-card {
            break-inside: avoid;
            margin-bottom: 1rem;
        }

        }

        media (max-width: 768px) {
            .storage-grid

        {
            grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
            gap: 8px;
            padding: 10px;
        }

        .slot-icon {
            font-size: 1.2rem;
        }

        .slot-id {
            font-size: 0.7rem;
        }
        }
    </style>
}

@functions {
    public string GetZoneIcon(string zoneCode)
    {
        switch (zoneCode)
        {
            case "A": return "fa-snowflake";
            case "B": return "fa-icicles";
            case "C": return "fa-thermometer-half";
            case "D": return "fa-shield-alt";
            default: return "fa-square";
        }
    }
}