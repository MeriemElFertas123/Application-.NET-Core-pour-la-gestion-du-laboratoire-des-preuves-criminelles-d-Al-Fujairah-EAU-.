@model WebApplication1.Models.Stockage.AttributionAnalyseViewModel
@{
    ViewBag.Title = "Attribution de l'Analyse";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <!-- En-tête de la page -->
            <div class="page-header-modern">
                <div class="header-content">
                    <div class="header-icon">
                        <i class="fas fa-user-check"></i>
                    </div>
                    <div class="header-text">
                        <h1>Attribution de l'Analyse</h1>
                        <p class="text-muted">Assignation des échantillons aux analystes qualifiés</p>
                    </div>
                    <div class="header-badge">
                        <span class="badge badge-outline-primary">Technicien</span>
                    </div>
                </div>
            </div>

            <div class="card card-modern">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <!-- Messages de statut -->
                        if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-modern">
                                <div class="alert-icon">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                                <div class="alert-content">
                                    <strong>Succès!</strong>
                                    <p>@TempData["SuccessMessage"]</p>
                                </div>
                            </div>
                        }

                        if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-modern">
                                <div class="alert-icon">
                                    <i class="fas fa-exclamation-triangle"></i>
                                </div>
                                <div class="alert-content">
                                    <strong>Erreur!</strong>
                                    <p>@TempData["ErrorMessage"]</p>
                                </div>
                            </div>
                        }

                        <!-- Section Description -->
                        <div class="info-card">
                            <div class="info-card-icon">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div class="info-card-content">
                                <h4>Processus d'Attribution</h4>
                                <p>L'échantillon stocké est attribué à un analyste qualifié selon le type d'analyse requis et la charge de travail actuelle.</p>
                            </div>
                        </div>

                        <!-- Formulaire d'attribution -->
                        <div class="form-section">
                            <h3 class="section-title">
                                <i class="fas fa-cogs"></i>
                                Paramètres d'Attribution
                            </h3>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label class="form-label">
                                            <i class="fas fa-user"></i>
                                            Analyste Assigné
                                        </label>
                                        @Html.DropDownListFor(m => m.AnalysteId, Model.AnalystesDisponibles,
                                            "Choisir un analyste...", new { @class = "form-control form-control-modern" })
                                        @Html.ValidationMessageFor(m => m.AnalysteId, "", new { @class = "form-error" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label class="form-label">
                                            <i class="fas fa-flask"></i>
                                            Type d'Analyse
                                        </label>
                                        @Html.DropDownListFor(m => m.TypeAnalyseRequis, Model.TypesAnalyseDisponibles,
                                            "Sélectionner le type...", new { @class = "form-control form-control-modern" })
                                        @Html.ValidationMessageFor(m => m.TypeAnalyseRequis, "", new { @class = "form-error" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label class="form-label">
                                            <i class="fas fa-exclamation"></i>
                                            Niveau de Priorité
                                        </label>
                                        @Html.DropDownListFor(m => m.PrioriteAnalyse, Model.NiveauxPriorite,
                                            "Choisir la priorité...", new { @class = "form-control form-control-modern" })
                                        @Html.ValidationMessageFor(m => m.PrioriteAnalyse, "", new { @class = "form-error" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label class="form-label">Options</label>
                                        <div class="custom-checkbox">
                                            @Html.CheckBoxFor(m => m.NotifierAnalyste, new { @class = "custom-checkbox-input" })
                                            <label class="custom-checkbox-label" for="NotifierAnalyste">
                                                <span class="custom-checkbox-indicator"></span>
                                                <i class="fas fa-bell"></i>
                                                Notifier l'analyste automatiquement
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group-modern">
                                <label class="form-label">
                                    <i class="fas fa-comment-alt"></i>
                                    Instructions Spéciales
                                </label>
                                @Html.TextAreaFor(m => m.InstructionsSpeciales, new
                                {
                                    @class = "form-control form-control-modern",
                                    @rows = "4",
                                    @placeholder = "Ajoutez des instructions particulières pour l'analyste..."
                                })
                            </div>
                        </div>

                        <!-- Section des échantillons -->
                        <div class="form-section">
                            <div class="section-header">
                                <h3 class="section-title">
                                    <i class="fas fa-vials"></i>
                                    Échantillons Disponibles
                                </h3>
                                @if (Model.EchantillonsDisponibles.Any())
                                {
                                    <div class="section-actions">
                                        <label class="select-all-checkbox">
                                            <input type="checkbox" id="selectAll" title="Tout sélectionner">
                                            <span class="checkmark"></span>
                                            Tout sélectionner
                                        </label>
                                    </div>
                                }
                            </div>

                            @if (Model.EchantillonsDisponibles.Any())
                            {
                                <div class="table-container">
                                    <table class="table table-modern">
                                        <thead>
                                            <tr>
                                                <th width="60px" class="text-center">
                                                    <i class="fas fa-check"></i>
                                                </th>
                                                <th>Numéro</th>
                                                <th>Affaire</th>
                                                <th>Type</th>
                                                <th>Zone</th>
                                                <th>Emplacement</th>
                                                <th>Priorité</th>
                                                <th>Réception</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.EchantillonsDisponibles.Count; i++)
                                            {
                                                <tr class="table-row-selectable">
                                                    <td class="text-center">
                                                        <div class="table-checkbox">
                                                            @Html.CheckBoxFor(m => m.EchantillonsDisponibles[i].EstSelectionne,
                                                                new { @class = "echantillon-checkbox", id = $"echantillon-{i}" })
                                                            <label for="echantillon-@i" class="checkmark"></label>
                                                        </div>
                                                        @Html.HiddenFor(m => m.EchantillonsDisponibles[i].Id)
                                                        @Html.HiddenFor(m => m.EchantillonsDisponibles[i].NumeroEchantillon)
                                                        @Html.HiddenFor(m => m.EchantillonsDisponibles[i].NumeroAffaire)
                                                        @Html.HiddenFor(m => m.EchantillonsDisponibles[i].TypeEchantillon)
                                                        @Html.HiddenFor(m => m.EchantillonsDisponibles[i].Zone)
                                                        @Html.HiddenFor(m => m.EchantillonsDisponibles[i].Emplacement)
                                                        @Html.HiddenFor(m => m.EchantillonsDisponibles[i].Priorite)
                                                        @Html.HiddenFor(m => m.EchantillonsDisponibles[i].DateReception)
                                                    </td>
                                                    <td>
                                                        <div class="sample-number">@Model.EchantillonsDisponibles[i].NumeroEchantillon</div>
                                                    </td>
                                                    <td>@Model.EchantillonsDisponibles[i].NumeroAffaire</td>
                                                    <td>
                                                        <span class="badge badge-info">@Model.EchantillonsDisponibles[i].TypeEchantillon</span>
                                                    </td>
                                                    <td><strong>@Model.EchantillonsDisponibles[i].Zone</strong></td>
                                                    <td>@Model.EchantillonsDisponibles[i].Emplacement</td>
                                                    <td>
                                                        @{
                                                            var prioriteClass = "badge-secondary";
                                                            switch (Model.EchantillonsDisponibles[i].Priorite.ToLower())
                                                            {
                                                                case "urgent":
                                                                case "urgente":
                                                                    prioriteClass = "badge-danger";
                                                                    break;
                                                                case "elevee":
                                                                case "élevée":
                                                                    prioriteClass = "badge-warning";
                                                                    break;
                                                                case "normale":
                                                                    prioriteClass = "badge-success";
                                                                    break;
                                                            }
                                                        }
                                                        <span class="badge @prioriteClass">@Model.EchantillonsDisponibles[i].Priorite</span>
                                                    </td>
                                                    <td>
                                                        <span class="date-display">@Model.EchantillonsDisponibles[i].DateReception.ToString("dd/MM/yyyy")</span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="empty-state">
                                    <div class="empty-state-icon">
                                        <i class="fas fa-flask"></i>
                                    </div>
                                    <h4>Aucun échantillon disponible</h4>
                                    <p>Il n'y a actuellement aucun échantillon disponible pour attribution.</p>
                                </div>
                            }
                        </div>

                        <!-- Actions du formulaire -->
                        <div class="form-actions-modern">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check"></i>
                                Attribuer les Échantillons
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i>
                                Retour
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Sélectionner/désélectionner tous les échantillons
            $('#selectAll').change(function () {
                var isChecked = $(this).prop('checked');
                $('.echantillon-checkbox').prop('checked', isChecked).trigger('change');
            });

            // Gestion du changement d'état des checkboxes individuelles
            $(document).on('change', '.echantillon-checkbox', function (e) {
                e.stopPropagation();
                updateSelectAllCheckbox();
                updateRowSelection(this);
            });

            // Sélection par clic sur la ligne
            $('.table-row-selectable').click(function (e) {
                // Ne pas déclencher si le clic est sur la checkbox ou son label
                if (!$(e.target).is('.echantillon-checkbox, .checkmark, .table-checkbox, .table-checkbox *')) {
                    var checkbox = $(this).find('.echantillon-checkbox');
                    checkbox.prop('checked', !checkbox.prop('checked')).trigger('change');
                }
            });

            // Mise à jour de la checkbox "Tout sélectionner"
            function updateSelectAllCheckbox() {
                var total = $('.echantillon-checkbox').length;
                var checked = $('.echantillon-checkbox:checked').length;

                $('#selectAll').prop('checked', total === checked);
                $('#selectAll').prop('indeterminate', checked > 0 && checked < total);
            }

            // Mise à jour visuelle des lignes sélectionnées
            function updateRowSelection(checkbox) {
                var row = $(checkbox).closest('tr');
                if ($(checkbox).is(':checked')) {
                    row.addClass('selected');
                } else {
                    row.removeClass('selected');
                }
            }

            // Initialisation au chargement
            $('.echantillon-checkbox').each(function () {
                updateRowSelection(this);
            });
            updateSelectAllCheckbox();
        });
    </script>
}
<style>
