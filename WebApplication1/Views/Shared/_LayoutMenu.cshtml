    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            // Initialisation des tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Variables pour suivre l'état des navbars
            let mainNavbarHidden = false;
            let secondaryNavbarHidden = false;

            // Fonction pour mettre à jour les classes du body
            function updateBodyClasses() {
                $('body').removeClass('main-hidden secondary-hidden both-hidden navbar-hidden');

                if (mainNavbarHidden && secondaryNavbarHidden) {
                    $('body').addClass('both-hidden navbar-hidden');
                } else if (mainNavbarHidden && !secondaryNavbarHidden) {
                    $('body').addClass('main-hidden navbar-hidden');
                } else if (!mainNavbarHidden && secondaryNavbarHidden) {
                    $('body').addClass('secondary-hidden');
                }
            }

            // Fonction pour mettre à jour les icônes des boutons
            function updateButtonIcons() {
                // Bouton navbar principale
                const mainBtn = $('#toggleMainNavbar');
                const mainIcon = mainBtn.find('i');
                if (mainNavbarHidden) {
                    mainIcon.removeClass('fa-bars').addClass('fa-eye-slash');
                    mainBtn.addClass('active');
                    mainBtn.attr('data-bs-original-title', 'Afficher le menu principal');
                } else {
                    mainIcon.removeClass('fa-eye-slash').addClass('fa-bars');
                    mainBtn.removeClass('active');
                    mainBtn.attr('data-bs-original-title', 'Masquer le menu principal');
                }

                // Bouton navbar secondaire
                const secondaryBtn = $('#toggleSecondaryNavbar');
                const secondaryIcon = secondaryBtn.find('i');
                if (secondaryNavbarHidden) {
                    secondaryIcon.removeClass('fa-ellipsis-h').addClass('fa-eye-slash');
                    secondaryBtn.addClass('active');
                    secondaryBtn.attr('data-bs-original-title', 'Afficher le menu secondaire');
                } else {
                    secondaryIcon.removeClass('fa-eye-slash').addClass('fa-ellipsis-h');
                    secondaryBtn.removeClass('active');
                    secondaryBtn.attr('data-bs-original-title', 'Masquer le menu secondaire');
                }

                // Mettre à jour les tooltips
                tooltipTriggerList.forEach(function(el) {
                    const tooltip = bootstrap.Tooltip.getInstance(el);
                    if (tooltip) {
                        tooltip.dispose();
                        new bootstrap.Tooltip(el);
                    }
                });
            }

            // Toggle navbar principale
            $('#toggleMainNavbar').click(function() {
                const navbar = $('#mainNavbar');
                const secondaryNavbar = $('#secondaryNavbar');
                mainNavbarHidden = !mainNavbarHidden;

                if (mainNavbarHidden) {
                    navbar.addClass('hidden');
                    // Si la navbar secondaire est visible, elle doit remonter
                    if (!secondaryNavbarHidden) {
                        secondaryNavbar.css('top', '0px');
                    }
                } else {
                    navbar.removeClass('hidden');
                    // Remettre la navbar secondaire à sa position normale
                    if (!secondaryNavbarHidden) {
                        secondaryNavbar.css('top', '56px');
                    }
                }

                updateBodyClasses();
                updateButtonIcons();

                // Sauvegarde dans localStorage
                localStorage.setItem('mainNavbarHidden', mainNavbarHidden);
            });

            // Toggle navbar secondaire
            $('#toggleSecondaryNavbar').click(function() {
                const navbar = $('#secondaryNavbar');
                secondaryNavbarHidden = !secondaryNavbarHidden;

                if (secondaryNavbarHidden) {
                    navbar.addClass('hidden');
                } else {
                    navbar.removeClass('hidden');
                    // Repositionner selon l'état de la navbar principale
                    if (mainNavbarHidden) {
                        navbar.css('top', '0px');
                    } else {
                        navbar.css('top', '56px');
                    }
                }

                updateBodyClasses();
                updateButtonIcons();

                // Sauvegarde dans localStorage
                localStorage.setItem('secondaryNavbarHidden', secondaryNavbarHidden);
            });

            // Restaurer l'état depuis localStorage au chargement
            const savedMainState = localStorage.getItem('mainNavbarHidden');
            const savedSecondaryState = localStorage.getItem('secondaryNavbarHidden');

            if (savedMainState === 'true') {
                mainNavbarHidden = true;
                $('#mainNavbar').addClass('hidden');
            }

            if (savedSecondaryState === 'true') {
                secondaryNavbarHidden = true;
                $('#secondaryNavbar').addClass('hidden');
            }

            // Ajuster la position de la navbar secondaire si nécessaire
            if (mainNavbarHidden && !secondaryNavbarHidden) {
                $('#secondaryNavbar').css('top', '0px');
            }

            updateBodyClasses();
            updateButtonIcons();

            // Raccourcis clavier pour les toggles
            $(document).keydown(function(e) {
                // Ctrl+Shift+M pour toggle navbar principale
                if (e.ctrlKey && e.shiftKey && e.keyCode === 77) {
                    e.preventDefault();
                    $('#toggleMainNavbar').click();
                }

                // Ctrl+Shift+S pour toggle navbar secondaire
                if (e.ctrlKey && e.shiftKey && e.keyCode === 83) {
                    e.preventDefault();
                    $('#toggleSecondaryNavbar').click();
                }

                // Échapper pour afficher les navbars si elles sont masquées
                if (e.keyCode === 27 && (mainNavbarHidden || secondaryNavbarHidden)) {
                    e.preventDefault();
                    if (mainNavbarHidden) $('#toggleMainNavbar').click();
                    if (secondaryNavbarHidden) $('#toggleSecondaryNavbar').click();
                }
            });

            // Animation de pulsation pour attirer l'attention sur les contrôles
            setTimeout(function() {
                $('.navbar-toggle-controls').addClass('animate__animated animate__pulse');
                setTimeout(function() {
                    $('.navbar-toggle-controls').removeClass('animate__animated animate__pulse');
                }, 2000);
            }, 3000);

            // Gestion des événements existants
            $(".dropdown-item.disabled").click(function (e) {
                e.preventDefault();
                alert("Accès refusé : Vous n'avez pas les permissions nécessaires.");
            });

            // Auto-dismiss alerts
            setTimeout(function () {
                $('.alert').each(function () {
                    var alert = new bootstrap.Alert(this);
                    alert.close();
                });
            }, 5000);

            // Animation pour les notifications
            $('.notification-badge').hover(function() {
                $(this).css('transform', 'scale(1.2)');
            }, function() {
                $(this).css('transform', 'scale(1)');
            });

            // Recherche rapide avec Enter
            $('#quickSearch').keypress(function(e) {
                if (e.which == 13) {
                    performQuickSearch();


                }
            });

            // Auto-focus sur le modal de recherche
            $('#quickSearchModal').on('shown.bs.modal', function () {
                $('#quickSearch').focus();
            });

            // Raccourcis clavier existants
            $(document).keydown(function(e) {
                // Ctrl+K pour recherche rapide
                if (e.ctrlKey && e.keyCode === 75) {
                    e.preventDefault();
                    $('#quickSearchModal').modal('show');
                }

                // Ctrl+H pour tableau de bord
                if (e.ctrlKey && e.keyCode === 72) {
                    e.preventDefault();
                    window.location.href = '/Home/Dashboard';
                }

                // Ctrl+Q pour scanner QR (si autorisé)
                if (e.ctrlKey && e.keyCode === 81) {
                    e.preventDefault();
                    @if (User.IsInRole("Admin") || User.IsInRole("Technicien") || User.IsInRole("Analyste"))
                    {
                        <text>window.location.href = '/QRCode/Scanner';</text>
                    }
                }
            });
        });

               // Fonction de recherche rapide
        function performQuickSearch() {
            var searchType = $('#searchType').val();
            var searchTerm = $('#quickSearch').val().trim();

            if (!searchTerm) {
                alert('Veuillez entrer un terme de recherche');
                return;
            }

            // Appeler le contrôleur de recherche
            window.location.href = '/Recherche/QuickSearch?searchType=' +
                                  encodeURIComponent(searchType) +
                                  '&searchTerm=' +
                                  encodeURIComponent(searchTerm);
        }
        // Fonction pour mettre à jour les notifications
        function updateNotificationCount() {
            $.ajax({
                url: '/Suivi/GetNotificationCount',
                type: 'GET',
                success: function(data) {
                    $('.notification-badge').each(function() {
                        if (data > 0) {
                            $(this).text(data).show();
                        } else {
                            $(this).hide();
                        }
                    });
                },
                error: function() {
                    console.log('Erreur lors de la mise à jour des notifications');
                }
            });
        }

        // Mettre à jour les notifications toutes les 30 secondes
        setInterval(updateNotificationCount, 30000);

        // Fonction pour montrer un guide d'utilisation des contrôles (optionnel)
        function showNavbarControlsGuide() {
            const guide = `
                <div class="alert alert-info alert-dismissible fade show">
                    <h6><i class="fas fa-lightbulb"></i> Guide des contrôles de navigation :</h6>
                    <ul class="mb-0">
                        <li><strong>Premier bouton :</strong> Masquer/Afficher le menu principal</li>
                        <li><strong>Deuxième bouton :</strong> Masquer/Afficher le menu secondaire</li>
                        <li><strong>Raccourcis :</strong> Ctrl+Shift+M, Ctrl+Shift+S</li>
                        <li><strong>Échap :</strong> Restaurer les menus masqués</li>
                    </ul>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            $('.body-content').prepend(guide);
        }

        // Afficher le guide au premier chargement (optionnel)
        if (!localStorage.getItem('navbarGuideShown')) {
            setTimeout(showNavbarControlsGuide, 2000);
            localStorage.setItem('navbarGuideShown', 'true');
        }
    </script>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
