                            </select>
                            <input type="text" class="form-control" id="quickSearch" placeholder="Entrez le numéro ou code...">
                            <button class="btn btn-primary" type="button" onclick="performQuickSearch()">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <a asp-controller="Recherche" asp-action="AdvancedSearch" class="btn btn-outline-primary">
