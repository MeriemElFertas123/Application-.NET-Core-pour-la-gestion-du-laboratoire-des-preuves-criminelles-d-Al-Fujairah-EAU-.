    <!-- Modal de Recherche Rapide -->
    <div class="modal fade" id="quickSearchModal" tabindex="-1" aria-labelledby="quickSearchModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="quickSearchModalLabel">
                        <i class="fas fa-search"></i> Recherche Rapide
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="quickSearch" class="form-label">Rechercher par:</label>
                        <div class="input-group">
                            <select class="form-select" id="searchType">
                                <option value="affaire">N° Affaire</option>
                                <option value="echantillon">N° Échantillon</option>
                                <option value="qr">Code QR</option>
